pragma solidity ^0.8.4;

contract PingPong {
    int private count = 0;
    
    event Pong(uint256, address, int); 

    function ping() public {
        count += 1;
        emit Pong(block.timestamp, msg.sender, count);
    }

    function getCount() public view returns (int) {
        return count;
    }
}