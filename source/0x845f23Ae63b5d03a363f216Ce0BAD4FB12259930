contract TREASUREBLOX is ERC20, LibraryLock {
    
    using SafeMath for uint256;
    
    // STORAGE ELEMENTS START
        
    // END OF STORAGE

    function constructor1() public {
        
        _name = "BLOX";
        _symbol = "BLOX";
        _mint(msg.sender,1000000 * 10 ** 18);
        _owner = msg.sender;
        excludedFromTax[msg.sender] = true;
        
        BURN_FEE = 3;
        TAX_FEE = 2;
        TREASURE_FEE = 3;
        MARKETING_FEE = 2;
        TREASURECHEST_ATTEMPT_FEE = 93;
        TAX_FEE_GAME_ENTRY = 5;
        TREASURE_CHEST_GAME_ENTRY = 95;
        
        initialize();
    }
    
    function setFees(uint _BURN_FEE,uint _TAX_FEE,uint _TREASURE_FEE,uint _MARKETING_FEE,uint _TREASURECHEST_ATTEMPT_FEE,uint _TAX_FEE_GAME_ENTRY,uint _TREASURE_CHEST_GAME_ENTRY) onlyOwner public {
        BURN_FEE = _BURN_FEE;
        TAX_FEE = _TAX_FEE;
        TREASURE_FEE = _TREASURE_FEE;
        MARKETING_FEE = _MARKETING_FEE;
        TREASURECHEST_ATTEMPT_FEE = _TREASURECHEST_ATTEMPT_FEE;
        TAX_FEE_GAME_ENTRY = _TAX_FEE_GAME_ENTRY;
        TREASURE_CHEST_GAME_ENTRY = _TREASURE_CHEST_GAME_ENTRY;
    }

        
    function setWallets(address _gamePotUsedForGames,address _treasureChest,address _marketingWallet) onlyOwner public {
        gamePotUsedForGames = _gamePotUsedForGames;
        treasureChest = _treasureChest;
        marketingWallet = _marketingWallet;
    }
    
    function updateCode(address newCode) onlyOwner public delegatedOnly {
        updateCodeAddress(newCode);
    }
    
    modifier onlyOwner() {
        require(isOwner(), "Ownable: caller is not the owner");
        _;
    }
     
    function isOwner() public view returns (bool) {
        return (msg.sender == _owner);
    }
    

    function transfer(address _recipient, uint256 _amount) public override returns (bool) {
        
        if (excludedFromTax[msg.sender] == true){
            _transfer(_msgSender(),_recipient,_amount);
            return true;
        } else {
            
            // 3% BURN - 2% TAX - 93% CHEST - 2% MARKETING
            
            TransferburnAmount = _amount.mul(BURN_FEE)/ 100;
            TransfertaxAmount = _amount.mul(TAX_FEE)/ 100;
            TransfertreasureAmount = _amount.mul(TREASURE_FEE)/ 100;
            TransfermarketingAmount = _amount.mul(MARKETING_FEE)/ 100;
            Transfersubtract;
            
            _burn(_msgSender(),TransferburnAmount);
            _transfer(_msgSender(), _owner, TransfertaxAmount);
            _transfer(_msgSender(), treasureChest, TransfertreasureAmount);
            _transfer(_msgSender(), marketingWallet, TransfermarketingAmount);
            
            Transfersubtract = TransferburnAmount + TransfertaxAmount + TransfertreasureAmount + TransfermarketingAmount;
            _amount = _amount;

            _transfer(_msgSender(), _recipient, _amount.sub(Transfersubtract));
            
            return true;
        }
        
     
    }

  function addGamesAttemptTime(uint id, uint256 deadline,address userAddress,string memory userName,uint gamesTries) internal returns(bool success) {
    
    allGames[id] = Time({
        id: id,
        deadline: deadline,
        userAddress: userAddress,   
        userName: userName,
        gamesTries: gamesTries
    });
    success = true;
  }
  
  function getAllLatestGameAttempts(uint id) public view returns(Time memory) {
    return allGames[id];
  }
  
   
  function headStartTimeLock(string memory _userName,uint256 _thisId) public payable {
    
     _headStartTime = Games[_thisId].headStartTime;
     _timeNow = block.timestamp;
    
        // Check time now less than short list deadline
        if (_timeNow < _headStartTime){
            
            // check short list 
            if (huntEntries[msg.sender][_thisId].entered){
                
                timeLockTreasureHunt(_userName,_thisId);
            }
            
        }else {
            
            if (huntEntries[msg.sender][_thisId].entered){
                
                timeLockTreasureHunt(_userName,_thisId);
            } 
    }
    
  }
// 0X00012
    
  function timeLockTreasureHunt(string memory _userName,uint256 _thisId) internal {
      
     _frontCost;
      
      _frontCost = Games[_thisId].costToEnter;

      if (Games[_thisId].live == true) {
          
         if (excludedFromTax[msg.sender] == true){
             
             _transfer(_msgSender(),_owner,_frontCost);
             
             Time memory timeItems = getAllLatestGameAttempts(_thisId);

                if (timeItems.deadline <= block.timestamp) {
            
                        // User AU79 has a minimum of 105 seconds to submit answer or until the next user requests the answer
                        
                        gamesTries = timeItems.gamesTries;
                        gamesTries+=1;
                        
                        addGamesAttemptTime(_thisId,block.timestamp + 105 seconds,msg.sender,_userName,gamesTries);
                        totalumberOfTries +=1;
                        
                        // Time memory timeItems = getAllLatestGameAttempts(_thisId);
                        
                        queEndsLastAttemptGlobal = timeItems.deadline;
                        walletFrontOfQueLastAttemptGlobal = timeItems.userAddress;
                        
                        // emit id userName deadline
                        emit AttemptEvent(_thisId,_userName,timeItems.deadline);
                        
                    } else {
                        
                    }
                    
         } else {
             
                    Time memory timeItems = getAllLatestGameAttempts(_thisId);
             
                    if (timeItems.deadline <= block.timestamp) {
                        
                        // 3% BURN - 2% TAX - 93% CHEST - 2% MARKETING
                        TimeLockburnAmount = _frontCost.mul(BURN_FEE)/ 100;
                        TimeLocktaxAmount = _frontCost.mul(TAX_FEE)/ 100; 
                        TimeLocktreasureAmount = _frontCost.mul(TREASURECHEST_ATTEMPT_FEE)/ 100;
                        TimeLockmarketingAmount = _frontCost.mul(MARKETING_FEE)/ 100;

                        _burn(_msgSender(),TimeLockburnAmount);
                        _transfer(_msgSender(), _owner, TimeLocktaxAmount);
                        _transfer(_msgSender(), treasureChest, TimeLocktreasureAmount);
                        _transfer(_msgSender(), marketingWallet, TimeLockmarketingAmount);
                        
                        TimeLocksubtract = TimeLockburnAmount + TimeLocktaxAmount + TimeLocktreasureAmount + TimeLockmarketingAmount;
                
                         _transfer(_msgSender(), msg.sender, _frontCost.sub(TimeLocksubtract));
            
                        // User has a minimum of 105 seconds to submit answer or until the next user requests the answer
                        
                        gamesTries = timeItems.gamesTries;
                        gamesTries+=1;
                        
                        addGamesAttemptTime(_thisId,block.timestamp + 105 seconds,msg.sender,_userName,gamesTries);
                        totalumberOfTries +=1;
                        
                        // Time memory timeItems = getAllLatestGameAttempts(_thisId);
                        
                        queEndsLastAttemptGlobal = timeItems.deadline;
                        walletFrontOfQueLastAttemptGlobal = timeItems.userAddress;
                        
                        // emit id userName deadline
                        emit AttemptEvent(_thisId,_userName,timeItems.deadline);

                    } else {
                    }
                }
          
            }
        
        
    }
        
       
    function enterHuntList(uint _gameId) internal {
        // Where is that worm hole?
        EnterHuntentered = true;
        _EnterHuntheadStartTime = Games[_gameId].headStartTime;
        _EnterHuntgameLive = Games[_gameId].live;
        
        huntEntries[msg.sender][_gameId] = Entrants(_gameId,EnterHuntentered,_EnterHuntheadStartTime,_EnterHuntgameLive);
        
        numberOfEntries[_gameId] += 1;
    }  
    
    function enterGame(uint _gameId) public payable {
       
        _EnterGameentryCost = Games[_gameId].entryCost;
        
        if (numberOfEntries[_gameId] < Games[_gameId].entryLimit) {
                 
             // 5% Dev - 95% Prize
            
            EnterGametaxAmount = _EnterGameentryCost.mul(TAX_FEE_GAME_ENTRY)/ 100; 
            EnterGametreasureAmount = _EnterGameentryCost.mul(TREASURE_CHEST_GAME_ENTRY)/ 100;
    
            _transfer(_msgSender(), _owner, EnterGametaxAmount);
            _transfer(_msgSender(), treasureChest, EnterGametreasureAmount);
    
            
            EnterGamesubtract = EnterGametaxAmount + EnterGametreasureAmount;
                        
            _transfer(_msgSender(), msg.sender, _EnterGameentryCost.sub(EnterGamesubtract));
            
            // Add Person To Game
            enterHuntList(_gameId);
            
        
        }
        
    }
    
    function setTreasureHuntGame(uint _gameId,bool _live, uint256 _prize, bytes32 _submitQuestionHash,uint256 _costToEnter,uint256 _submitSecretCost,string memory _riddle, string memory _clue,uint256 _headStartTime,uint256 _entryLimit,uint256 _entryCost) public onlyOwner() {
        
        require(isOwner(), "Ownable: caller is not the owner");
  
        Games[_gameId] = Game(_gameId,_live,_prize,_submitQuestionHash,_costToEnter,_submitSecretCost,_riddle,_clue,_headStartTime,_entryLimit,_entryCost);
        
        addGamesAttemptTime(_gameId,block.timestamp + 105 seconds,msg.sender,"Treasure Team Deployment",0);
        
        _transfer(treasureChest, gamePotUsedForGames, _prize);
        
        
        // emit gameid, prize and riddle
        emit setGameEvent(_gameId,_prize,_riddle);
        
     }
    

   function makePaymentForSecret(uint _treasureGameid) internal returns(bool){
        // charge for submitting secret
                

        _PaymentForSecretsubmitSecretCost = Games[_treasureGameid].submitSecretCost;
                
        // 3% BURN - 2% TAX - 93% CHEST - 2% MARKETING
        SecretburnAmount = _PaymentForSecretsubmitSecretCost.mul(BURN_FEE)/ 100;
        SecrettaxAmount = _PaymentForSecretsubmitSecretCost.mul(TAX_FEE)/ 100; 
        SecrettreasureAmount = _PaymentForSecretsubmitSecretCost.mul(TREASURECHEST_ATTEMPT_FEE)/ 100;
        SecretmarketingAmount = _PaymentForSecretsubmitSecretCost.mul(MARKETING_FEE)/ 100;

        _burn(_msgSender(),SecretburnAmount);
        _transfer(_msgSender(), _owner, SecrettaxAmount);
        _transfer(_msgSender(), treasureChest, SecrettreasureAmount);
        _transfer(_msgSender(), marketingWallet, SecretmarketingAmount);
                                
        
        Secretsubtract = SecretburnAmount + SecrettaxAmount + SecrettreasureAmount + SecretmarketingAmount;
                    
        _transfer(_msgSender(), msg.sender, _PaymentForSecretsubmitSecretCost.sub(Secretsubtract));
        
        return true;
    }
    

    function SubmitSecret(bytes32 hashedConfirm,string memory _answer,uint _treasureGameid,string memory _winningMessage) external payable {
        

        Game memory currentGame = Games[_treasureGameid];
        
        SubmitSecretcurrentGameLive = currentGame.live; 
        
        if (SubmitSecretcurrentGameLive == true) {
            
            Time memory timeItems = getAllLatestGameAttempts(_treasureGameid);

            if (timeItems.userAddress == msg.sender){

                SubmitSecretpayment = makePaymentForSecret(_treasureGameid);
                
                if (SubmitSecretpayment) {
                    
                    // Step 1 confirm answer is solved and matching incoming hash //#c4d31f
                    SubmitSecrethashedCheckSolved = bytes32(keccak256(abi.encodePacked(bytes32(keccak256(abi.encodePacked(msg.sender))),bytes32(keccak256(abi.encodePacked(_answer))))));
            
                        // check the question has been solved and that the incoming hashedConfirm are the same so things cant be changed. 196211..
                    
                     if (SubmitSecrethashedCheckSolved != hashedConfirm) {

                         SubmitSecretincorrect = true;
                         // emit // emit id, prize and answer not solved the pot
                         emit submitSecretFailEvent(_treasureGameid,_answer,SubmitSecretincorrect);
                         }
            
                    if (SubmitSecrethashedCheckSolved == hashedConfirm){
                        
                        SubmitSecretanswer = currentGame.questionHash;
                        
                        // chack the sender is the msg sender and that the hashes match - Life is an adventure
                        SubmitSecrethashedResult1 = bytes32(keccak256(abi.encodePacked(bytes32(keccak256(abi.encodePacked(msg.sender))),SubmitSecretanswer)));
                        
                        if (hashedConfirm != SubmitSecrethashedResult1) {
                            
                         SubmitSecretincorrect = true;
                         // emit // emit id, prize and answer not solved the pot
                         emit submitSecretFailEvent(_treasureGameid,_answer,SubmitSecretincorrect);
                         }
                        
                        if (hashedConfirm == SubmitSecrethashedResult1) {
                            // add a if person in answer correctly then they cant take next pot money or duplicate pot withdrawl
                            // Add a has and value from the has which can be withdrawn
                           
                            Winners memory currentWinners = Pot1AnsweredCorrectly[_treasureGameid];
                            
                            if (currentWinners.treasurefound == false){
                                
                                if (currentWinners.winningAddress != msg.sender){
                                    
                                    SubmitSecretcurrentGamePrize = currentGame.prize;
                                    
                                    Games[_treasureGameid].live = false;
                                    
                                    Pot1AnsweredCorrectly[_treasureGameid] = Winners(msg.sender,true,SubmitSecretcurrentGamePrize,SubmitSecretanswer,_winningMessage);
                                    // Pot1AnsweredCorrectly[_treasureGameid] = Winners(msg.sender,true,currentGame.prize,answer,_winningMessage);

                                    _transfer(gamePotUsedForGames, msg.sender, SubmitSecretcurrentGamePrize);
                                    
                                    // emit id, answer and bool
                                    SubmitSecretincorrect = false;
                                    // emit // emit id, prize and answer not solved the pot
                                    // Found my bloody rocket in 280 chars
                                    emit submitSecretFailEvent(_treasureGameid,_answer,SubmitSecretincorrect);
                                  
                                }
                                
                            } 
                
                        } 
                        
                    } 
 
                } 
                
            }
            
        } 
        
    }
}