// File: src/protocol/Tokenomics/ITokenomics.sol
// SPDX-License-Identifier: GPL-3.0
pragma solidity >=0.5.0;

interface ITokenomics {
  function getTotalBalance() external returns (uint256);

  function getFunds(bytes32 id) external returns (uint256);

  function getSaleRoundFunds() external returns (uint256);

  function getReserveForPoolLiquidityFunds() external returns (uint256);

  function getMarketingAndRewardsFunds() external returns (uint256);

  function getDevelopmentFunds() external returns (uint256);

  function getAirdropFunds() external returns (uint256);

  function getGamingFunds() external returns (uint256);

  function setFunds(bytes32 id, uint256 amount) external returns (bool);

  function transferFunds(bytes32 id, uint256 amount, address to) external returns (bool);
}


// File: src/protocol/Tokenomics/Tokenomics.sol
// SPDX-License-Identifier: MIT
pragma solidity 0.8.10;
import { SafeERC20, IERC20 } from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import { ReentrancyGuard } from "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import { Errors } from "../../common/libraries/helpers/Errors.sol";
import { Ownable } from "@openzeppelin/contracts/access/Ownable.sol";
import { ITokenomics } from "./ITokenomics.sol";
import { IAddressesProvider } from "../../common/configuration/AddressProvider/IAddressesProvider.sol";

// all funds are in SPENT
contract Tokenomics is Ownable, ReentrancyGuard, ITokenomics {
  using SafeERC20 for IERC20;

  mapping(bytes32 => uint256) private _funds;
  IAddressesProvider public immutable ADDRESSES_PROVIDER;

  constructor(IAddressesProvider provider) {
    ADDRESSES_PROVIDER = provider;
  }

  // Main identifiers
  bytes32 private constant SALE_ROUND = "SALE_ROUND";
  bytes32 private constant RESERVE_FOR_POOL_LIQUIDITY = "RESERVE_FOR_POOL_LIQUIDITY";
  bytes32 private constant MARKETING_AND_REWARDS = "MARKETING_AND_REWARDS";
  bytes32 private constant DEVELOPMENT = "DEVELOPMENT";
  bytes32 private constant AIRDROP = "AIRDROP";
  bytes32 private constant GAMING = "GAMING";

  /***************************************************** */
  /*********************GETTERS************************* */
  /***************************************************** */
  function getTotalBalance() public view override returns (uint256) {
    return IERC20(ADDRESSES_PROVIDER.getSpent()).balanceOf(address(this));
  }

  function getFunds(bytes32 id) public view override returns (uint256) {
    return _funds[id];
  }

  function getSaleRoundFunds() public view override returns (uint256) {
    return getFunds(SALE_ROUND);
  }

  function getReserveForPoolLiquidityFunds() public view override returns (uint256) {
    return getFunds(RESERVE_FOR_POOL_LIQUIDITY);
  }

  function getMarketingAndRewardsFunds() public view override returns (uint256) {
    return getFunds(MARKETING_AND_REWARDS);
  }

  function getDevelopmentFunds() public view override returns (uint256) {
    return getFunds(DEVELOPMENT);
  }

  function getAirdropFunds() public view override returns (uint256) {
    return getFunds(AIRDROP);
  }

  function getGamingFunds() public view override returns (uint256) {
    return getFunds(GAMING);
  }

  /***************************************************** */
  /*********************SETTERS************************* */
  /***************************************************** */

  function setFunds(bytes32 id, uint256 amount) external override onlyOwner returns (bool) {
    require(IERC20(ADDRESSES_PROVIDER.getSpent()).allowance(msg.sender, address(this)) >= amount, Errors.LOW_ALLOWANCE);
    IERC20(ADDRESSES_PROVIDER.getSpent()).transferFrom(msg.sender, address(this), amount);

    uint256 oldAmount = _funds[id];
    _funds[id] = oldAmount + amount;
    return true;
  }

  function transferFunds(bytes32 id, uint256 amount, address to) external override onlyOwner returns (bool) {
    require(IERC20(ADDRESSES_PROVIDER.getSpent()).balanceOf(address(this)) >= amount, Errors.LOW_BALANCE);

    IERC20(ADDRESSES_PROVIDER.getSpent()).transfer(to, amount);

    uint256 oldAmount = _funds[id];
    _funds[id] = oldAmount - amount;
    return true;
  }
}

