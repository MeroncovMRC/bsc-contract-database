pragma solidity ^0.8.4;

contract CoinSeek {
    string public name = "CoinSeek";
    string public symbol = "SEEK";
    uint256 public totalSupply = 1000000000000000000000000000; // 1 b tokens
    uint8 public decimals = 18;
    uint256 public commissionPercentage = 5;
    address public owner;
    address public pancakeswapAddress = 0x10ED43C718714eb63d5aA57B78B54704E256024E; // PancakeSwap Router address

    event Transfer(address indexed _from, address indexed _to, uint256 _value);
    event Approval(address indexed _owner, address indexed _spender, uint256 _value);

    mapping(address => uint256) public balanceOf;
    mapping(address => mapping(address => uint256)) public allowance;

    constructor() {
        owner = msg.sender;
        balanceOf[msg.sender] = totalSupply;
    }

    function transfer(address _to, uint256 _value) public returns (bool success) {
        require(balanceOf[msg.sender] >= _value);

        balanceOf[msg.sender] -= _value;
        balanceOf[_to] += _value;

        emit Transfer(msg.sender, _to, _value);
        
        return true;
    }

    function approve(address _spender, uint256 _value) public returns (bool success) {
        allowance[msg.sender][_spender] = _value;
        emit Approval(msg.sender, _spender, _value);
        return true;
    }

    function transferFrom(address _from, address _to, uint256 _value) public returns (bool success) {
        require(_value <= balanceOf[_from]);
        require(_value <= allowance[_from][msg.sender]);

        balanceOf[_from] -= _value;
        balanceOf[_to] += _value;
        allowance[_from][msg.sender] -= _value;

        emit Transfer(_from, _to, _value);
        
        return true;
    }

    function buyTokens(uint256 _amount) public returns (bool success) {
        require(_amount > 0, "Amount must be greater than 0");

        uint256 commission = (_amount * commissionPercentage) / 100;
        uint256 transferAmount = _amount - commission;

        balanceOf[msg.sender] += transferAmount;
        balanceOf[owner] += commission;

        emit Transfer(owner, msg.sender, transferAmount);
        emit Transfer(owner, owner, commission);

        return true;
    }

    function sellTokens(uint256 _amount) public returns (bool success) {
        require(balanceOf[msg.sender] >= _amount, "Insufficient balance");

        uint256 commission = (_amount * commissionPercentage) / 100;
        uint256 transferAmount = _amount - commission;

        balanceOf[msg.sender] -= _amount;
        balanceOf[owner] += commission;

        emit Transfer(msg.sender, owner, commission);
        emit Transfer(msg.sender, address(0), transferAmount);

        return true;
    }

    function isPancakeSwapAddress(address _address) private view returns (bool) {
        return _address == pancakeswapAddress;
    }
    
    function transferWithCommission(address _to, uint256 _amount) public returns (bool success) {
        require(_to != address(0), "Invalid address");

        uint256 commission = 0;
        uint256 transferAmount = _amount;

        if (isPancakeSwapAddress(_to)) {
            commission = (_amount * commissionPercentage) / 100;
            transferAmount = _amount - commission;
            
            balanceOf[msg.sender] -= _amount;
            balanceOf[_to] += transferAmount;
            balanceOf[owner] += commission;

            emit Transfer(msg.sender, _to, transferAmount);
            emit Transfer(msg.sender, owner, commission);
        } else {
            balanceOf[msg.sender] -= _amount;
            balanceOf[_to] += _amount;
            
            emit Transfer(msg.sender, _to, _amount);
        }

        return true;
    }

    receive() external payable {
        revert("Contract does not accept Ether");
    }
}