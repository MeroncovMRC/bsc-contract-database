
// File: /contracts/HaloWorld/HaloNFTMapping.sol
// SPDX-License-Identifier: MIT
pragma solidity 0.8.16;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

import "../Interface/IHaloNftMapping.sol";
import "../Interface/IMappingAble.sol";

contract HaloNftMapping is IHaloNftMapping, IERC721Receiver, Ownable {

    using EnumerableSet for EnumerableSet.AddressSet;

    event NFT721Received(address operator, address from, uint256 tokenId, bytes data);

    event eMapping721 (
        address asset,
        uint256[] tokenIds,
        address owner
    );

    EnumerableSet.AddressSet private _IAMs;
    mapping (address => address) public _contracts;
    mapping (address => mapping( uint256 => bool) ) private _blackList;
    address public _blackHole = 0x0000000000000000000000000000000000000001;


    modifier onlyIAM() {
        require(_IAMs.contains(msg.sender), "must call by iam");
        _;
    }

    constructor(){
        addIAM(msg.sender);
    }

    function addIAM(address iamAddress ) public onlyOwner {
        if(!_IAMs.contains(iamAddress)){
            _IAMs.add(iamAddress);
        }
    }

    function removeIAM(address iamAddress) public onlyOwner {
         if(_IAMs.contains(iamAddress)){
            _IAMs.remove(iamAddress);
         }
    }

    function getIAMS() public view returns(address[] memory){
        return _IAMs.values();
    }

    /**
     * @dev function to remove mapping contract
     */
    function addContractMapping(address oldAddress, address newAddress) public onlyIAM {
        _contracts[oldAddress] = newAddress;
    }

    /**
     * @dev function to remove mapping contract
     */
    function removeContract(address oldAddress) public onlyIAM {
        _contracts[oldAddress] = address(0x0);
    }

    /**
     * @dev function to add assets tokenIds to blacklist
     */
    function addContractBlackList(address assetAddress, uint256[] calldata tokenIds) public onlyIAM {

        require(_contracts[assetAddress] != address(0x0), "invalid mapping address!" );
        require(tokenIds.length <=100, "tokenids count over max!");

        for(uint64 i=0; i< tokenIds.length; i++){
            _blackList[assetAddress][tokenIds[i]] = true;
        }
    }

    /**
     * @dev function to remove assets tokenIds from blacklist
     */
    function removeContractBlackList(address assetAddress, uint256[] calldata tokenIds ) public onlyIAM {

        require(tokenIds.length <= 100, "tokenids count over max!");

        for(uint64 i=0; i< tokenIds.length; i++){
            _blackList[assetAddress][tokenIds[i]] = false;
        }
    }


    function mapping721(address assetAddress, uint256[] calldata tokenIds) external  {

        require(_contracts[assetAddress] != address(0x0), "invalid mapping address!" );

        for (uint64 i=0; i<tokenIds.length; i++) {

            require(!_blackList[assetAddress][tokenIds[i]], "invalid token id! " );

            (IERC721)(assetAddress).safeTransferFrom(msg.sender, _blackHole, tokenIds[i]);
            (IERC721)(_contracts[assetAddress]).safeTransferFrom(address(this), msg.sender, tokenIds[i],"");
        }

        emit eMapping721(assetAddress, tokenIds, msg.sender );
    }


    function mappingAvatar721(address assetAddress, uint256[] calldata tokenIds) external  {

        require(_contracts[assetAddress] != address(0x0), "invalid mapping address!" );
        
        for (uint64 i=0; i<tokenIds.length; i++) {

            require(!_blackList[assetAddress][tokenIds[i]], "invalid token id! " );

            IAvatar721.ExtraInfo memory extraInfo = (IAvatar721)(assetAddress).getExtraInfo(tokenIds[i]);

            (IERC721)(assetAddress).safeTransferFrom(msg.sender, _blackHole, tokenIds[i]);

            (IMappingAble)(_contracts[assetAddress]).mappingMint(msg.sender, extraInfo);
        }

        emit eMapping721(assetAddress, tokenIds, msg.sender );
    }


    function onERC721Received(address operator, address from, uint256 tokenId, bytes memory data) public returns (bytes4) {
        //success
        emit NFT721Received(operator, from, tokenId, data);
        return bytes4(keccak256("onERC721Received(address,address,uint256,bytes)"));
    }


    function transfer721(address assetAddress, address to, uint256[] calldata tokenIds ) onlyIAM external  {
        for (uint256 i = 0; i < tokenIds.length; ++i) {
            (IERC721)(assetAddress).safeTransferFrom(address(this), to, tokenIds[i], "");
        }
    }

    function withdrawGasToken(address target) public  onlyIAM {
        payable(target).transfer(address(this).balance);
    }

}



