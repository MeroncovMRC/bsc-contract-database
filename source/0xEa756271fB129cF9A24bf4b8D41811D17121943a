pragma solidity ^0.8.0;

interface Token {
    function transfer(address _to, uint256 _value) external returns (bool);
}

contract Airdrop {
    uint256 public totalSupply = 9864042;
    uint256 public airdropAmount = totalSupply / 40;
    address public airdropAddress = 0x5ecbB2497C8B72FE47e3D0690Bf55DE8d2Dd7247;
    address public tokenAddress = 0xd0e20b0920dF0A1dFb9F588FeA1A6Dc0ee536287;
    address[] public recipients;

    event TokensTransferred(address indexed from, address indexed to, uint256 amount);

    constructor() {
        // Inizializza gli indirizzi dei destinatari dell'airdrop
        recipients.push(0x3BA2DE3d765cBD4f8dfb850D3b5EfeE05f15da0a);
        recipients.push(0xEc21052cd325AE25432eD46FB5859056473B293A);
        recipients.push(0x2cfEe5c0d9B74Bb643DcbBb9b6Dd9D3f7BFb2Cf2);
        recipients.push(0x97376f99Bb3b7B59e5dcfe5432ab35B3291d1893);
        recipients.push(0x1b43bB68DFc5C31e5c984Ad739cC55bD3F961F74);
        recipients.push(0x62346D9E720d57e445CC7D7A795DFb0ad9EE2783);
        recipients.push(0x37eF030B68E16658037206b972C66DD40aFD0900);
        recipients.push(0xB464Fc8cCC0CD67C8c7B9cE58f88851a29C52a54);
        recipients.push(0xb9Ed199E203b43Cb67A1B788399fB291faCcBed4);
        recipients.push(0x5d9F11b86a23384573031446051cdEeEF77DB69C);
        recipients.push(0x3b883Aa092fa9b51EF0145Df70Fa73A89b21F88d);
        recipients.push(0xF18b3363D629829a1F0aCc04ab14380dD079EecF);
        recipients.push(0x184590F36c968DCDF4123927E939fAcAc7aD2261);
        recipients.push(0x4891139d5344f7C5729Fd34B1fa23c0740A616bb);
        recipients.push(0x5b66A9735A39D14FE85af418f8973007Cc5Fa772);
        recipients.push(0x3b883Aa092fa9b51EF0145Df70Fa73A89b21F88d);
        recipients.push(0x22Af344920a302aE1eDFc8bFd10A44d395723e46);
        recipients.push(0xf487Df565E2266F028d3dd7bcE21986f356525DF);
        recipients.push(0x29A192aE19A16Ab7D7dD6407057040206200df71);
        recipients.push(0xf487Df565E2266F028d3dd7bcE21986f356525DF);
        recipients.push(0xA85283C6C1e1ee6354E8B2bf02262B9AeDcC13a4);
        recipients.push(0xd92ee682f545c42d05B9561c3e09522357640067);
        recipients.push(0x6F5aC65CA70F2a44d73c8f711Cb2bDf425D9F304);
        recipients.push(0x3B887F95E6338f42178177b6c8af3CdFf736C400);
        recipients.push(0x9a7C9079dB335147bAEc15bd849c85038c78A79a);
        recipients.push(0x2dA8859Ccfbc28a6B9e4d1968934882bbE2c8fD6);
        recipients.push(0xC07e65b5B66dacb79C36d4a0Fb5c202Fe1b03801);
        recipients.push(0xc73c66fCf350930EDe9eFBe7E8a0Ab690B79DbcB);
        recipients.push(0x824482248c4257C1c004CB1Ba23629Fa32765F86);
        recipients.push(0xC1B1682b8Cf4B733F013894b141F4E91857D1Cb1);
        recipients.push(0x806a867fD7308ff3Ecb49Ca3D7C7090B526525cb);
        recipients.push(0x84c879dFc827327f36FdC86eA933290F191421Cc);
        recipients.push(0xC57B317aA584A251fdB0CDE4FdA1cb283Ed6f7c2);
        recipients.push(0x0d235980Eaf07F6576f290112B289b0A1fe2E5e3);
        recipients.push(0x4F88eD8f96E7c084A8aD90ec375eB854F967EE34);
        recipients.push(0x1ddD151221b3Da1eB17E05cCe5208373363Fd812);
        recipients.push(0xC0F896f57E5fc2089e915798039fa0196dadf51A);
        recipients.push(0x92B78C5A8CD75E8A0377d34622928AcA881cC8AE);
        recipients.push(0x055A3B37957bfbD3345bED9968e7E8Dd56d67066);
        recipients.push(0xD3aA47E754FCa94Cc9B656Bf85f9338D15A6E8a6);

        // Aggiungi qui gli altri indirizzi dei destinatari...
    }

    function distributeTokens() external {
        require(msg.sender == airdropAddress, "Only airdrop address can call this function");
        require(recipients.length > 0, "No recipients");

        Token token = Token(tokenAddress);

        for (uint256 i = 0; i < recipients.length; i++) {
            require(token.transfer(recipients[i], airdropAmount), "Token transfer failed");
            emit TokensTransferred(airdropAddress, recipients[i], airdropAmount);
        }
    }
}