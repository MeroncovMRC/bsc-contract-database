pragma solidity >=0.5.0 <0.8.19;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@pancakeswap/v3-periphery/contracts/libraries/TransferHelper.sol";
import "../interface/IPancakeRouter02.sol";
import "../governance/Governance.sol";

contract DistributorPayment is Governance {
    using SafeMath for uint256;
    using Address for address;

    uint256 private stoneTax = 15;
    uint256 private arcaneTax = 5;

    address public stoneAddress;
    address public arcaneAddress;
    address public receiveArcane;
    address public receiveStone;
    address public router = 0x10ED43C718714eb63d5aA57B78B54704E256024E;

    receive() external payable {
        _swapExactETHForTokensSupportingFeeOnTransferTokensArc();
        _sendBnbToDividends();
        _receiveBNB();
    }

    function changeReceiver(
        address _receiveArcane,
        address _receiveStone
    ) external onlyGovernance {
        receiveArcane = _receiveArcane;
        receiveStone = _receiveStone;
    }

    function changeAddress(
        address _stoneAddress,
        address _arcaneAddress
    ) external onlyGovernance {
        stoneAddress = _stoneAddress;
        arcaneAddress = _arcaneAddress;
    }

    function defineTax(
        uint256 _stoneTax,
        uint256 _arcaneTax
    ) external onlyGovernance {
        stoneTax = _stoneTax;
        arcaneTax = _arcaneTax;
    }

    function _receiveBNB() public payable {
        uint256 initialBalance = address(this).balance;
        if (initialBalance > 0) {
            TransferHelper.safeTransferETH(_governance, initialBalance);
        }
    }

    function _swapExactETHForTokensSupportingFeeOnTransferTokensArc()
        public
        payable
    {
        if (msg.value > 0) {
            address[] memory path = new address[](2);
            path[0] = IPancakeRouter02(router).WETH();
            path[1] = arcaneAddress;
            uint256 arcaneValue = msg.value.mul(arcaneTax).div(100);
            IPancakeRouter02(router)
                .swapExactETHForTokensSupportingFeeOnTransferTokens{
                value: arcaneValue
            }(0, path, receiveArcane, block.timestamp);
        }
    }

    function _sendBnbToDividends() public payable {
        if (msg.value > 0) {
            uint256 stoneValue = msg.value.mul(stoneTax).div(100);
            TransferHelper.safeTransferETH(receiveStone, stoneValue);
        }
    }
}

