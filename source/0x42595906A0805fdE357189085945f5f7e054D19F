// File: contracts/libraries/Arrays.sol
// SPDX-License-Identifier: MIT

pragma solidity ^0.8.6;

library Arrays {
    function reverseArray(
        address[] memory _array
    ) internal pure returns (address[] memory) {
        uint length = _array.length;
        address[] memory reversedArray = new address[](length);
        uint j = 0;
        for (uint i = length; i >= 1; i--) {
            reversedArray[j] = _array[i - 1];
            j++;
        }
        return reversedArray;
    }
}


// File: contracts/libraries/V2Library.sol
// SPDX-License-Identifier: MIT

pragma solidity ^0.8.6;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "../interfaces/IV2Factory.sol";
import "../interfaces/IV2Router.sol";
import "../interfaces/IV2Pair.sol";

library SwapV2Library {
    using SafeMath for uint256;

    // returns sorted token addresses, used to handle return values from pairs sorted in this order
    function sortTokens(
        address tokenA,
        address tokenB
    ) internal pure returns (address token0, address token1) {
        require(tokenA != tokenB, "UniswapV2Library: IDENTICAL_ADDRESSES");
        (token0, token1) = tokenA < tokenB
            ? (tokenA, tokenB)
            : (tokenB, tokenA);
        require(token0 != address(0), "UniswapV2Library: ZERO_ADDRESS");
    }

    // calculates the CREATE2 address for a pair without making any external calls
    function pairFor(
        address factory,
        address tokenA,
        address tokenB
    ) internal view returns (address pair) {
        (address token0, address token1) = sortTokens(tokenA, tokenB);
        pair = IV2Factory(factory).getPair(token0, token1);
    }

    // fetches and sorts the reserves for a pair
    function getReserves(
        address pair,
        address tokenA,
        address tokenB
    ) internal view returns (uint256 reserveA, uint256 reserveB) {
        (address token0, ) = sortTokens(tokenA, tokenB);
        (uint256 reserve0, uint256 reserve1, ) = IV2Pair(pair).getReserves();
        (reserveA, reserveB) = tokenA == token0
            ? (reserve0, reserve1)
            : (reserve1, reserve0);
    }

    function getAmountOut(
        uint256 amountIn,
        uint256 reserveIn,
        uint256 reserveOut
    ) internal pure returns (uint256 amountOut) {
        require(amountIn > 0, "UniswapV2Library: INSUFFICIENT_INPUT_AMOUNT");
        require(
            reserveIn > 0 && reserveOut > 0,
            "UniswapV2Library: INSUFFICIENT_LIQUIDITY"
        );
        uint256 amountInWithFee = amountIn.mul(997);
        uint256 numerator = amountInWithFee.mul(reserveOut);
        uint256 denominator = reserveIn.mul(1000).add(amountInWithFee);
        amountOut = numerator / denominator;
    }

    function getAmountsOut(
        address[] memory pairs,
        uint amountIn,
        address[] memory path
    ) internal view returns (uint[] memory amounts) {
        require(path.length >= 2, "INVALID_PATH");
        require(pairs.length == path.length - 1, "INVALID_FACTORIES");
        amounts = new uint[](path.length);
        amounts[0] = amountIn;
        for (uint i; i < path.length - 1; i++) {
            (uint reserveIn, uint reserveOut) = getReserves(
                pairs[i],
                path[i],
                path[i + 1]
            );
            amounts[i + 1] = getAmountOut(amounts[i], reserveIn, reserveOut);
        }
    }

    function swap(
        address[] memory pairs,
        uint[] memory amounts,
        address[] memory path,
        address _to
    ) internal {
        for (uint i; i < path.length - 1; i++) {
            (address input, address output) = (path[i], path[i + 1]);
            (address token0, ) = sortTokens(input, output);
            uint amountOut = amounts[i + 1];

            (uint amount0Out, uint amount1Out) = input == token0
                ? (uint(0), amountOut)
                : (amountOut, uint(0));
            address to = i < path.length - 2 ? pairs[i + 1] : _to;
            IV2Pair(pairs[i]).swap(amount0Out, amount1Out, to, new bytes(0));
        }
    }
}


// File: contracts/Vault.sol
// SPDX-License-Identifier: MIT

pragma solidity ^0.8.6;

import "./interfaces/IVault.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract Vault is IVault, Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20;

    uint16 private _fee;

    address private _profitRef;

    mapping(address => bool) registeredWallets;

    mapping(address => mapping(address => uint256)) public totalDeposited;
    mapping(address => mapping(address => uint256)) public balanceOf;
    mapping(address => uint256) public totalSupply;

    constructor() {
        _profitRef = msg.sender;
        register(msg.sender);
    }

    function _mint(
        address _token,
        address _to,
        uint256 _amount
    ) private {
        totalSupply[_token] += _amount;
        balanceOf[_to][_token] += _amount;
    }

    function _burn(
        address _token,
        address _to,
        uint256 _amount
    ) private {
        totalSupply[_token] -= _amount;
        balanceOf[_to][_token] -= _amount;
    }

    function calculateProfitAndFee(
        uint256 amount,
        uint256 amountPerTotalDeposits
    ) internal view returns (uint256 profit, uint256 profitFee) {
        if (amount > amountPerTotalDeposits) {
            profit = amount - amountPerTotalDeposits;
            profitFee = (profit * _fee) / 1000;
        }

        return (profit, profitFee);
    }

    /// @notice Get the profit amount of the user for a given token
    /// @dev Can be used to calculate the profit rewards for the user
    /// @param owner the wallet whose profit is checked
    /// @param token the ERC20 token which is checked
    /// @param _shares when 0 the total share is used
    function getProfitAmount(
        address owner,
        address token,
        uint256 _shares
    ) public view override returns (uint256 profit, uint256 profitFee) {
        uint256 userBalance = balanceOf[owner][token];
        if (_shares == 0 || _shares > userBalance) {
            _shares = userBalance;
        }
        if (userBalance == 0) {
            return (profit, profitFee);
        }
        IERC20 erc20 = IERC20(token);

        uint256 amount = ((_shares * erc20.balanceOf(address(this))) /
            totalSupply[token]);
        uint256 amountPerTotalDeposits = (_shares *
            totalDeposited[owner][token]) / userBalance;

        return calculateProfitAndFee(amount, amountPerTotalDeposits);
    }

    function deposit(address token, uint256 amount) public override {
        require(isRegistered(msg.sender), "not registered");
        IERC20 erc20 = IERC20(token);
        require(
            erc20.balanceOf(msg.sender) >= amount,
            "not enough token balance to deposit"
        );
        uint256 shares;
        if (totalSupply[token] == 0) {
            shares = amount;
        } else {
            shares =
                (amount * totalSupply[token]) /
                erc20.balanceOf(address(this));
        }
        erc20.safeTransferFrom(msg.sender, address(this), amount);
        _mint(token, msg.sender, shares);
        totalDeposited[msg.sender][token] += amount;

        emit DepositedToken(msg.sender, token, amount);
    }

    function withdraw(address token, uint256 _shares)
        external
        override
        nonReentrant
    {
        require(isRegistered(msg.sender), "not registered");
        require(
            balanceOf[msg.sender][token] >= _shares,
            "not enough token balance to withdraw"
        );

        IERC20 erc20 = IERC20(token);

        uint256 amount = ((_shares * erc20.balanceOf(address(this))) /
            totalSupply[token]);
        uint256 amountPerTotalDeposits = (_shares *
            totalDeposited[msg.sender][token]) / balanceOf[msg.sender][token];

        (, uint256 profitFee) = calculateProfitAndFee(
            amount,
            amountPerTotalDeposits
        );

        // Only pay out profit when there is any
        if (profitFee > 0) {
            erc20.transfer(_profitRef, profitFee);
        }

        erc20.transfer(msg.sender, amount - profitFee);

        _burn(token, msg.sender, _shares);
        totalDeposited[msg.sender][token] -= amountPerTotalDeposits;

        emit WithdrawnToken(msg.sender, token, amount);
    }

    function fee() external view virtual override returns (uint16) {
        return _fee;
    }

    function setFee(uint16 newFee) external virtual override onlyOwner {
        require(newFee < 1000 && newFee > 0, "invalid fee");
        _fee = newFee;
        emit FeeChanged(msg.sender, newFee);
    }

    function changeProfitRef(address newRef)
        external
        virtual
        override
        onlyOwner
    {
        _profitRef = newRef;
    }

    function profitRef() external view virtual override returns (address) {
        return _profitRef;
    }

    function setAllowance(address token, address spender) external onlyOwner {
        IERC20 erc20 = IERC20(token);
        uint256 allowance = erc20.allowance(address(this), spender);
        if (allowance == 0) {
            erc20.approve(spender, 2**256 - 1);
        }
    }

    function isRegistered(address user) public view override returns (bool) {
        return registeredWallets[user];
    }

    function register(address user) public override onlyOwner {
        require(!registeredWallets[user], "user already registered");

        registeredWallets[user] = true;
        emit UserRegistered(user);
    }
}

