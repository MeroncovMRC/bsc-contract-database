    function rescueToken(address tokenAddress, uint256 tokens)
        public
        onlyOwner
        returns (bool success)
    {
        return IERC20(tokenAddress).transfer(msg.sender, tokens);
    }

    function updateUserStatus(address _user, bool _disable) public onlyOwner {
        users[_user].disable = _disable;
    }

    function bindRecommender(address recommender) public permit(msg.sender) {
        require(
            users[msg.sender].recommender == address(0),
            "You have bound a recommender"
        );
        require(msg.sender != recommender, "You can't bind yourself");
        require(
            recommender != address(0) &&
                recommender != deadWallet &&
                !isContract(recommender),
            "You can't bind address 0"
        );
        require(
            !isContract(recommender) &&
                userInvestIndexs[recommender].length > 0,
            "The recommender you bind is invalid"
        );

        users[msg.sender].recommender = recommender;
        users[msg.sender].bindTime = block.timestamp;

        emit BindRecommender(msg.sender, recommender);
    }

    function userInvest(uint256 investType) public permit(msg.sender) {
        require(
            users[msg.sender].recommender != address(0),
            "You have not bound the recommender"
        );

        uint256 maxGrade = queryMyTeamGradeByTeamInvest(msg.sender);
        require(
            (investType > users[msg.sender].lastInvestType ||
                users[msg.sender].isOut) &&
                ((investType > 0 && investType < 5) ||
                    (investType > 4 && investType <= maxGrade)),
            "Error in type of invest"
        );

        uint256 toInvestUsdtNum = queryToInvestUsdtNum(msg.sender, investType);
        uint256 tokenAmount = usdtEqualsToETXE(toInvestUsdtNum);
        require(
            toInvestUsdtNum >= investLimits[0].mul(10**18) &&
                ETXE.balanceOf(msg.sender) >= tokenAmount,
            "Your balance is insufficient"
        );

        ETXE.transferFrom(msg.sender, address(this), tokenAmount);

        if (userIndexs[msg.sender] == 0) {
            userIndexs[msg.sender] = userAddresses.length;
            userAddresses.push(msg.sender);
            users[users[msg.sender].recommender].invitees.push(msg.sender);
        }

        if (users[msg.sender].isOut) {
            users[msg.sender].isOut = false;
            users[msg.sender].drawTime;
        }

        userInvestIndexs[msg.sender].push(invests.length);
        invests.push(
            Invest(msg.sender, toInvestUsdtNum, tokenAmount, block.timestamp)
        );

        _updateTeamInvest(msg.sender, toInvestUsdtNum);

        _upgrade(msg.sender);

        uint256 lastInvestType = users[msg.sender].lastInvestType;

        users[msg.sender].lastInvestType = investType;

        emit UserInvest(
            msg.sender,
            lastInvestType,
            investType,
            toInvestUsdtNum,
            tokenAmount
        );
    }

    function userDraw() public permit(msg.sender) {
        User memory u = users[msg.sender];

        require(
            u.recommender != address(0),
            "You have not bound the recommender"
        );

        require(
            !u.isOut,
            "The profit has reached the upper limit, please re-invest"
        );

        require(
            block.timestamp.div(24 hours) > u.drawTime.div(24 hours),
            "You have withdrawn it today"
        );

        uint256 tokenRelease = queryMyTotalInvestRelease(msg.sender);
        uint256 recommenderAward = queryMyRecommenderAward(msg.sender);
        uint256 teamAward = queryMyTeamGradeAward(msg.sender);

        uint256 unDrawtokens = tokenRelease.add(recommenderAward).add(
            teamAward
        );

        u.drawRelease = u.drawRelease.add(tokenEqualsToUsdt(tokenRelease));
        u.drawRecommendAward = u.drawRecommendAward.add(
            tokenEqualsToUsdt(recommenderAward)
        );
        u.drawTeamAward = u.drawTeamAward.add(tokenEqualsToUsdt(teamAward));

        u.drawTime = block.timestamp;

        uint256 ratio = queryMyUpLimitRatio(msg.sender);

        uint256 totalDraw = u.drawRelease.add(u.drawRecommendAward).add(
            u.drawTeamAward
        );

        uint256 up = u.totalUsdtInvest.mul(ratio).div(10);

        if (totalDraw >= up) {
            u.isOut = true;

            u.outInvestIndex = userInvestIndexs[msg.sender][
                userInvestIndexs[msg.sender].length - 1
            ];

            uint256 difference = totalDraw.sub(up);

            unDrawtokens = unDrawtokens > difference
                ? unDrawtokens.sub(difference)
                : 0;
        }

        require(
            unDrawtokens >= 0 &&
                unDrawtokens < u.totalUsdtInvest.mul(drawUpperLimit),
            "You have no token to claim"
        );

        users[msg.sender] = u;

        ETXE.transfer(msg.sender, unDrawtokens);

        _recommenderAward(msg.sender, tokenRelease);

        emit UserDraw(
            msg.sender,
            unDrawtokens,
            tokenRelease,
            recommenderAward,
            teamAward
        );
    }

    function upgrade() public permit(msg.sender) {
        uint256 availableGrade = queryMyTeamGrade(msg.sender);
        uint256 currentGrade = queryMyGrade(msg.sender);

        require(
            availableGrade > currentGrade,
            "You do not meet the upgrade conditions"
        );

        users[msg.sender].grades.push(availableGrade);
        users[msg.sender].upgradeTimes.push(block.timestamp);

        emit Upgrade(msg.sender, currentGrade, availableGrade, block.timestamp);
    }

    function _updateTeamInvest(address user, uint256 toInvestUsdtNum) private {
        users[user].totalUsdtInvest = users[user].totalUsdtInvest.add(
            toInvestUsdtNum
        );

        address recommender;
        uint256 i;

        for (i = 0; i < 10; i++) {
            recommender = users[user].recommender;

            if (recommender == address(0)) break;

            users[recommender].teamUsdtInvest = users[recommender]
                .teamUsdtInvest
                .add(toInvestUsdtNum);
            user = recommender;
        }
    }

    function _recommenderAward(address user, uint256 tokenRelease) private {
        address recommender;
        uint256 awardToken;
        uint256 awardTime = block.timestamp;
        address user0 = user;
        uint256 i;

        for (i = 0; i < 3; i++) {
            recommender = users[user0].recommender;

            if (address(0) == recommender) break;

            awardToken = tokenRelease.mul(recommenderAwardRates[i]).div(10000);

            userRecommenderAwardIndexs[recommender].push(
                recommenderAwards.length
            );
            recommenderAwards.push(
                RecommenderAward(recommender, user, awardToken, awardTime)
            );

            user0 = recommender;
        }
    }

    function _upgrade(address user) private {
        uint256 availableGrade = queryMyTeamGrade(user);
        uint256 currentGrade = queryMyGrade(user);

        if (availableGrade > currentGrade) {
            users[user].grades.push(availableGrade);
            users[user].upgradeTimes.push(block.timestamp);
        }
    }

    function queryReleaseRates() public view returns (uint256[11] memory) {
