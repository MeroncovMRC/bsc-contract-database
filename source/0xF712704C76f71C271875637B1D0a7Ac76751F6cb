pragma solidity ^0.8.0;





interface IPair {
    function getReserves()
        external
        view
        returns (
            uint112 reserve0,
            uint112 reserve1,
            uint32 blockTimestampLast
        );
}

interface IETXE {
    function getTokenPriceSum(uint256 start, uint256 end)
        external
        view
        returns (uint256 tokenPriceSum);
}

contract ETXEController is Ownable {
    using SafeMath for uint256;
    using Strings for address;

    event PaymentReceived(address from, uint256 amount);
    event BindRecommender(address account, address recommender);
    event UserInvest(
        address account,
        uint256 lastInvestType,
        uint256 investType,
        uint256 tokenEqualsToUsdt,
        uint256 investETXE
    );
    event UserDraw(
        address account,
        uint256 totalDraw,
        uint256 release,
        uint256 recommendAward,
        uint256 teamAward
    );
    event Upgrade(
        address account,
        uint256 oldGrade,
        uint256 newGrade,
        uint256 upgradeTimes
    );

    struct User {
        uint256 totalUsdtInvest;
        uint256 teamUsdtInvest;
        uint256 lastInvestType;
        uint256 drawRelease; //U
        uint256 drawRecommendAward; //U
        uint256 drawTeamAward; //U
        uint256 drawTime;
        uint256 outInvestIndex;
        bool isOut;
        bool disable;
        uint256 bindTime;
        address recommender;
        address[] invitees;
        uint256[] grades;
        uint256[] upgradeTimes;
    }

    struct Invest {
        address userAddress;
        uint256 tokenEqualsToUsdt;
        uint256 investToken;
        uint256 investTime;
    }

    struct RecommenderAward {
        address userAddress;
        address inviteeAddress;
        uint256 awardToken;
        uint256 awardTime;
    }

    mapping(address => User) users;
    mapping(address => uint256) userIndexs;
    address[] userAddresses;

    Invest[] invests;
    mapping(address => uint256[]) userInvestIndexs;

    RecommenderAward[] recommenderAwards;
    mapping(address => uint256[]) userRecommenderAwardIndexs;

    uint256[11] investLimits;
    uint256[11] releaseRates;
    uint256[11] bigAreaGradeLimits;
    uint256[11] smallAreaGradeLimits;
    uint256[11] teamGradeTokenAwards;
    uint256[3] recommenderAwardRates;
    uint256[3] upLimitRatio;

    uint256 drawUpperLimit;

    string public baseLink;
    address private deadWallet = 0x000000000000000000000000000000000000dEaD;

    ERC20 public ETXE;
    IPair private Pair;
    IETXE private ETXEI;

    uint256 private constant MAX = ~uint256(0);

    modifier permit(address operator) {
        require(
            !isContract(operator) || !users[operator].disable,
            "Not allowed"
        );
        _;
    }

    constructor() {
        ETXE = ERC20(address(0xD3E372e842973E062644f187541c77873E1BEA22));
        Pair = IPair(address(0x21075aaa456fF0ED8BA4Fc41B12218c9999e73f4));
        ETXEI = IETXE(address(0xD3E372e842973E062644f187541c77873E1BEA22));

        investLimits = [
            100,
            200,
            500,
            1000,
            2000,
            3000,
            5000,
            10000,
            30000,
            50000,
            100000
        ];
        releaseRates = [100, 110, 120, 130, 140, 150, 160, 170, 180, 190, 200];
        bigAreaGradeLimits = [
            500,
            1000,
            2000,
            5000,
            10000,
            30000,
            50000,
            100000,
            300000,
            800000,
            3000000
        ];
        smallAreaGradeLimits = [
            500,
            1000,
            2000,
            5000,
            10000,
