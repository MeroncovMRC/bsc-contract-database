    function queryMyTotalInvestRelease(address user)
        public
        view
        returns (uint256 totalTokenRelease)
    {
        uint256[] memory indexs = userInvestIndexs[user];

        if (indexs.length == 0 || users[user].isOut) {
            return 0;
        }

        uint256 i;

        for (i = indexs.length; i > 0; i--) {
            if (indexs[i - 1] <= users[user].outInvestIndex) break;
            totalTokenRelease = totalTokenRelease.add(
                queryMySingleInvestRelease(user, indexs[i - 1])
            );
        }

        return totalTokenRelease;
    }

    function queryMySingleInvestRelease(address user, uint256 index)
        public
        view
        returns (uint256 tokenRelease)
    {
        Invest memory inv = invests[index];

        if (
            inv.userAddress != user ||
            users[user].isOut ||
            index <= users[user].outInvestIndex
        ) {
            return 0;
        }

        uint256 start = inv.investTime > users[user].drawTime
            ? inv.investTime
            : users[user].drawTime;

        uint256 pairPriceSum = ETXEI.getTokenPriceSum(start, block.timestamp);

        tokenRelease = inv
            .tokenEqualsToUsdt
            .mul(queryMyYield(user))
            .div(10**18)
            .mul(pairPriceSum)
            .div(10**4);

        return tokenRelease;
    }

    function queryMyTeamGradeAward(address user)
        public
        view
        returns (uint256 teamAwardToken)
    {
        User memory u = users[user];

        if (u.grades.length == 0) return 0;

        uint256 grade;
        uint256 start;
        uint256 endTime = block.timestamp;

        uint256 i;

        for (i = u.grades.length; i > 0; i--) {
            grade = u.grades[i - 1];

            if (endTime <= users[user].drawTime) break;

            start = u.upgradeTimes[i - 1] > users[user].drawTime
                ? u.upgradeTimes[i - 1]
                : users[user].drawTime;

            uint256 pairPriceSum = ETXEI.getTokenPriceSum(start, endTime);

            teamAwardToken = teamAwardToken.add(
                teamGradeTokenAwards[grade - 1].mul(pairPriceSum)
            );

            endTime = u.upgradeTimes[i - 1];
        }

        return teamAwardToken;
    }

    function queryMyRecommenderAward(address user)
        public
        view
        returns (uint256 recommenderAward)
    {
        uint256[] memory indexs = userRecommenderAwardIndexs[user];

        RecommenderAward memory rec;
        uint256 i;

        for (i = indexs.length; i > 0; i--) {
            rec = recommenderAwards[indexs[i - 1]];
            if (rec.userAddress == user) {
                if (rec.awardTime < users[user].drawTime) break;

                recommenderAward = recommenderAward.add(rec.awardToken);
            }
        }

        return recommenderAward;
    }

    function queryMyTotalAwardToken(address user)
        public
        view
        returns (uint256 awardToken)
    {
        uint256 tokenRelease = queryMyTotalInvestRelease(user);
        uint256 recommenderAward = queryMyRecommenderAward(user);
        uint256 teamAward = queryMyTeamGradeAward(user);

        awardToken = tokenRelease.add(recommenderAward).add(teamAward);
    }

    function queryMyTeamInvitees(address user)
        public
        view
        returns (address[] memory teamInvitees)
    {
        address[] memory invitees2 = new address[](2000);

        uint256 count;
        uint256 i;
        uint256 j;

        address[] memory invitees1;

        for (i = 0; i < 12; i++) {
            address[] memory invitees0;

            if (i == 0) {
                invitees0 = users[user].invitees;
            } else {
                invitees0 = queryUsersInvitees(invitees1);
            }

            for (j = 0; j < invitees0.length; j++) {
                if (count > 1999) break;

                invitees2[count] = invitees0[j];
                count++;
            }
            invitees1 = invitees0;
        }

        teamInvitees = new address[](count);

        for (i = 0; i < count; i++) {
            teamInvitees[i] = invitees2[i];
        }

        return teamInvitees;
    }

    function queryMyTeamInviteesNum(address user)
        public
        view
        returns (uint256 teamInviteesNum)
    {
        address[] memory teamInvitees = queryMyTeamInvitees(user);
        teamInviteesNum = teamInvitees.length;
    }

    function queryUsersInvitees(address[] memory userAddrs)
        public
        view
        returns (address[] memory)
    {
        address[] memory invitees1 = new address[](2000);

        uint256 count;
        uint256 i;
        uint256 j;

        for (i = 0; i < userAddrs.length; i++) {
            address[] memory invitees0 = users[userAddrs[i]].invitees;

            for (j = 0; j < invitees0.length; j++) {
                if (count < 2000) {
                    invitees1[count] = invitees0[j];
                    count++;
                }
            }
        }

        address[] memory invitees = new address[](count);

        for (i = 0; i < count; i++) {
            invitees[i] = invitees1[i];
        }

        return invitees;
    }

    function queryMyTeamInviteesAndTotalInvests(address user)
        public
        view
        returns (address[] memory teamInvitees, uint256[] memory totalInvests)
    {
        teamInvitees = users[user].invitees;
        totalInvests = new uint256[](teamInvitees.length);

        uint256 i;

        for (i = 0; i < teamInvitees.length; i++) {
            totalInvests[i] = users[teamInvitees[i]].totalUsdtInvest.add(
                users[teamInvitees[i]].teamUsdtInvest
            );
        }
    }

    function queryMyTotalUsdtInvest(address user)
        public
        view
        returns (uint256)
    {
        return users[user].totalUsdtInvest;
    }

    function queryMaxInvestUsdtNum(address user)
        public
        view
        returns (uint256 maxInvestUsdtNum)
    {
        uint256 maxGrade = queryMyTeamGradeByTeamInvest(user);

        maxInvestUsdtNum = maxGrade < 5
            ? investLimits[3].mul(10**18)
            : investLimits[maxGrade - 1].mul(10**18);

        return maxInvestUsdtNum;
    }

    function queryToInvestUsdtNum(address user, uint256 investType)
        public
        view
        returns (uint256)
    {
        uint256 maxInvestUsdtNum = queryMaxInvestUsdtNum(user);
        uint256 investUsdt = investLimits[investType - 1].mul(10**18);

        if (investUsdt <= maxInvestUsdtNum) {
            uint256 totalUsdtInvest = users[user].totalUsdtInvest;
            return investUsdt.sub(totalUsdtInvest);
        }

        return 0;
    }

    function queryToInvestTokenNum(address user, uint256 investType)
        public
        view
        returns (uint256)
    {
        uint256 toInvestUsdtNum = queryToInvestUsdtNum(user, investType);
        return usdtEqualsToETXE(toInvestUsdtNum);
    }

    function queryMyYield(address user) public view returns (uint256) {
        uint256 totalUsdtInvest = users[user].totalUsdtInvest;

        uint256 i;

        for (i = 11; i > 0; i--) {
            if (totalUsdtInvest >= investLimits[i - 1].mul(10**18)) {
                return releaseRates[i - 1];
            }
        }

        return 0;
    }

    function queryMyUpLimitRatio(address user) public view returns (uint256) {
        uint256[] memory indexs = queryMyInvestIndexs(user);

        if (indexs.length == 0) return 0;

        Invest memory inv = queryInvest(indexs[0]);

        uint256 interval = block.timestamp - inv.investTime;

        if (interval > 365 days) {
            return upLimitRatio[2];
        } else if (interval > 180 days) {
            return upLimitRatio[1];
        }

        return upLimitRatio[0];
    }

    function queryMyTeamBigAreaTotalInvest(address user)
        public
        view
        returns (uint256 bigAreaTotalInvest)
    {
        address[] memory invitees = users[user].invitees;

        if (invitees.length < 2) return 0;

        uint256 teamlUsdtInvest;
        uint256 i;

        for (i = 0; i < invitees.length; i++) {
            teamlUsdtInvest = users[invitees[i]].totalUsdtInvest.add(
                users[invitees[i]].teamUsdtInvest
            );
            if (teamlUsdtInvest > bigAreaTotalInvest) {
                bigAreaTotalInvest = teamlUsdtInvest;
            }
        }

        return bigAreaTotalInvest;
    }

    function queryMyTeamSmallAreaTotalInvest(address user)
        public
        view
        returns (uint256 smallAreaTotalInvest)
    {
        address[] memory invitees = users[user].invitees;

        if (invitees.length < 2) return 0;

        uint256 i;

        for (i = 0; i < invitees.length; i++) {
            smallAreaTotalInvest = smallAreaTotalInvest
                .add(users[invitees[i]].totalUsdtInvest)
                .add(users[invitees[i]].teamUsdtInvest);
        }

        smallAreaTotalInvest = smallAreaTotalInvest.sub(
            queryMyTeamBigAreaTotalInvest(user)
        );

        return smallAreaTotalInvest;
    }

    function queryMyTeamTotalInvest(address user)
        public
        view
        returns (uint256 teamTotalInvest)
    {
        address[] memory invitees = users[user].invitees;

        if (invitees.length < 2) return 0;

        uint256 i;

        for (i = 0; i < invitees.length; i++) {
            teamTotalInvest = teamTotalInvest
                .add(users[invitees[i]].totalUsdtInvest)
                .add(users[invitees[i]].teamUsdtInvest);
        }

        return teamTotalInvest;
    }

    function queryMyTeamGradeByTeamInvest(address user)
        public
        view
        returns (uint256)
    {
        uint256 smallAreaTotalInvest = queryMyTeamSmallAreaTotalInvest(user);
        uint256 bigAreaTotalInvest = queryMyTeamBigAreaTotalInvest(user);

        uint256 i;

        for (i = 11; i > 0; i--) {
            if (
                bigAreaTotalInvest >= bigAreaGradeLimits[i - 1].mul(10**18) &&
                smallAreaTotalInvest >= smallAreaGradeLimits[i - 1].mul(10**18)
            ) {
                return i;
            }
        }

        return 0;
    }

    function queryMyTeamGrade(address user) public view returns (uint256) {
        uint256 totalUsdtInvest = users[user].totalUsdtInvest;
        uint256 smallAreaTotalInvest = queryMyTeamSmallAreaTotalInvest(user);
        uint256 bigAreaTotalInvest = queryMyTeamBigAreaTotalInvest(user);

        uint256 i;

        for (i = 11; i > 0; i--) {
            if (
                totalUsdtInvest >= investLimits[i - 1].mul(10**18) &&
                bigAreaTotalInvest >= bigAreaGradeLimits[i - 1].mul(10**18) &&
                smallAreaTotalInvest >= smallAreaGradeLimits[i - 1].mul(10**18)
            ) {
                return i;
            }
        }

        return 0;
    }

    function queryIsBindRecommender(address user) public view returns (bool) {
        if (users[user].recommender == address(0)) {
            return false;
        }
        return true;
    }

    function queryInviteLink(address user)
        public
        view
        returns (string memory inviteLink)
    {
        if (userInvestIndexs[user].length > 0) {
            string memory addr = user.toHexString();

            if (user != address(0)) {
                inviteLink = string(abi.encodePacked(baseLink, addr));
            }
        }

        return inviteLink;
    }

    function isContract(address addr) internal view returns (bool) {
        uint256 size;
        assembly {
            size := extcodesize(addr)
        }
        return size > 0;
    }

    function tokenEqualsToUsdt(uint256 tokenAmount)
        public
        view
        returns (uint256 usdtAmount)
    {
        (uint256 reserve0, uint256 reserve1, ) = Pair.getReserves();

        if (reserve0 > 0 && reserve1 > 0) {
            usdtAmount = tokenAmount.mul(reserve0).div(reserve1);
        }

        return usdtAmount;
    }

    function usdtEqualsToETXE(uint256 usdtAmount)
        public
        view
        returns (uint256 tokenAmount)
    {
        (uint256 reserve0, uint256 reserve1, ) = Pair.getReserves();

        if (reserve0 > 0 && reserve1 > 0) {
            tokenAmount = usdtAmount.mul(reserve1).div(reserve0);
        }

        return tokenAmount;
    }

    function checkBindRecommender(address user, address recommender)
        public
        view
        returns (uint256)
    {
        if (users[user].recommender != address(0)) return 1;
        if (user == recommender) return 2;
        if (recommender == address(0) || recommender == deadWallet) return 3;
        if (
            isContract(recommender) || userInvestIndexs[recommender].length == 0
        ) return 4;

        return 0;
    }

    function checkUserInvest(address user, uint256 investType)
        public
        view
        returns (uint256)
    {
        if (users[user].recommender == address(0)) return 1;
        uint256 maxGrade = queryMyTeamGradeByTeamInvest(user);
        if (
            investType == 0 ||
            investType > 11 ||
            (investType <= users[user].lastInvestType && !users[user].isOut) ||
            (investType > 4 && investType > maxGrade)
        ) return 2;
        uint256 canInvestUsdtNum = queryMaxInvestUsdtNum(user);
        if (canInvestUsdtNum < investLimits[0].mul(10**18)) return 3;
        uint256 toInvestUsdtNum = queryToInvestUsdtNum(user, investType);
        uint256 tokenAmount = usdtEqualsToETXE(toInvestUsdtNum);
        if (
            ETXE.balanceOf(user) < tokenAmount ||
            toInvestUsdtNum < investLimits[0].mul(10**18)
        ) return 4;

        return 0;
    }

    function checkUserDraw(address user) public view returns (uint256) {
        if (users[user].recommender == address(0)) return 1;

        uint256 tokenRelease = queryMyTotalInvestRelease(user);
        uint256 recommenderAward = queryMyRecommenderAward(user);
        uint256 teamAward = queryMyTeamGradeAward(user);

        uint256 tokens = tokenRelease.add(recommenderAward).add(teamAward);
        if (tokens == 0) return 2;
        if (block.timestamp.div(24 hours) <= users[user].drawTime.div(24 hours))
            return 3;

        return 0;
    }
}