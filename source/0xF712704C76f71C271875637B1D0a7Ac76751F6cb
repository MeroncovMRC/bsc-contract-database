    function queryUserAwardIsToUpLimit(address user)
        public
        view
        returns (bool)
    {
        uint256 ratio = queryMyUpLimitRatio(user);
        uint256 totalDraw = queryMyTotalDrawAward(user);

        if (totalDraw < users[user].totalUsdtInvest.mul(ratio).div(10)) {
            return false;
        }

        return true;
    }

