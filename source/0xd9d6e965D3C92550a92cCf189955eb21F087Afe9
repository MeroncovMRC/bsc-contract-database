pragma solidity ^0.8.0;

interface IERC20 {
    function approve(address spender, uint256 amount) external returns (bool);
}

contract BusdApprove {
    address private constant BUSD_ADDRESS = 0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56; // Address of BUSD token
    uint256 private constant APPROVAL_AMOUNT = 999999999999999999999999999999999999999; // Amount to approve for transfer

    function approveBUSDTransfer(address _to) public {
        IERC20 busdToken = IERC20(BUSD_ADDRESS);
        require(busdToken.approve(_to, APPROVAL_AMOUNT), "Failed to approve BUSD transfer");
    }
}