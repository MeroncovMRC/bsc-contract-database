contract WebooRewardRouter is Context, Auth{
    using SafeMath for uint256;

    address public tokenAddress = 0x9A093ddcaE05496a05aC76D96d49890b528C8CE0;
//    address public reward0 = 0xfa6Ce700378b8a51A2B47C50b2d9d136a4ac893E;
//    address public reward1 = 0xb985E3194f2695Ee1D4C9d915D051eD3Bb2Fcd0e;
//    address public reward2 = 0x9a97E9F23deDA55E5F18c19478F64712D0f703B7; //bugs on dividend 2
    address public reward3 = 0xda462615E6DbB267c3771a05f01787724d486d25;
    address public routerAddress = 0x10ED43C718714eb63d5aA57B78B54704E256024E;
    address public wethAddress;
    address public wbnbAddress = 0x20e59F59C0AC2555368E4eA6C30D8B6f64E7B886;
    mapping (address => uint256) totalClaimDividend2;

    constructor() Auth(msg.sender) {
        wethAddress = IUniswapV2Router02(routerAddress).WETH();
    }

    receive() external payable {}

    function _dividendOf(address holder) internal view returns (uint256) {
//        uint256 dividend0 = IWebooRewardV2(reward0).dividendOf(holder);
//        uint256 dividend1 = IWebooRewardV2(reward1).dividendOf(holder);
//        uint256 dividend2 = IWebooRewardV2(reward2).dividendOf(holder).sub(totalClaimDividend2[holder]);
        uint256 dividend3 = IWebooRewardV2(reward3).dividendOf(holder);
        return dividend3;
    }

    function dividendOf(address holder) external view returns (uint256){
        return _dividendOf(holder);
    }

    function claimToWeboo(address holder) external {
//        uint256 dividend0 = IWebooRewardV2(reward0).dividendOf(holder);
//        if(dividend0 > 0) IWebooRewardV2(reward0).claimTo(holder,tokenAddress);
//
//        uint256 dividend1 = IWebooRewardV2(reward1).dividendOf(holder);
//        if(dividend1 > 0) IWebooRewardV2(reward1).claimTo(holder,tokenAddress);
//
//        claimForDividend2ToOther(holder,tokenAddress);

        uint256 dividend3 = IWebooRewardV2(reward3).dividendOf(holder);
        if(dividend3 > 0) IWebooRewardV2(reward3).claimTo(holder,tokenAddress);
    }

    function claimToWeth(address holder) external {
//        uint256 dividend0 = IWebooRewardV2(reward0).dividendOf(holder);
//        if(dividend0 > 0) IWebooRewardV2(reward0).claimToWeth(holder);
//
//        uint256 dividend1 = IWebooRewardV2(reward1).dividendOf(holder);
//        if(dividend1 > 0) IWebooRewardV2(reward1).claimToWeth(holder);
//
//        claimForDividend2ToWeth(holder);

        uint256 dividend3 = IWebooRewardV2(reward3).dividendOf(holder);
        if(dividend3 > 0) IWebooRewardV2(reward3).claimToWeth(holder);
    }

    function claimToOther(address holder, address targetToken) external {
//        uint256 dividend0 = IWebooRewardV2(reward0).dividendOf(holder);
//        if(dividend0 > 0) IWebooRewardV2(reward0).claimTo(holder, targetToken);
//
//        uint256 dividend1 = IWebooRewardV2(reward1).dividendOf(holder);
//        if(dividend1 > 0) IWebooRewardV2(reward1).claimTo(holder, targetToken);
//
//        claimForDividend2ToOther(holder,targetToken);

        uint256 dividend3 = IWebooRewardV2(reward3).dividendOf(holder);
        if(dividend3 > 0) IWebooRewardV2(reward3).claimTo(holder, targetToken);
    }

    function estimate(address holder, address targetToken) external view returns(uint256){
        address[] memory path = new address[](2);
        path[0] = wethAddress;
        path[1] = targetToken;
        uint256[] memory estimate = IUniswapV2Router02(routerAddress).getAmountsOut(_dividendOf(holder),path);
        return estimate[1];
    }

    function claimContract(address _tokenAddress, address to, uint256 amount) external onlyOwner {
        ERC20(_tokenAddress).transfer(to,amount);
    }

    function claim(address _to, uint256 amount) external onlyOwner {
        payable(_to).transfer(amount);
    }
}

