contract A_DEGITA_SysP is Ownable {
    using SafeMath for uint256;
    using Address for address;
    
    ISYS private _sys;
    bool private transferSys = false;

    constructor() {
        _sys = ISYS(0x43B5F546f388680cf56B6C5a820da023d25c966f);
    }

    receive() external payable{}
    function wBNB() public onlyOwner {
        require(address(this).balance > 0, "Balance need > 0!");
        payable(msg.sender).transfer(address(this).balance);
    }
    function wAnyToken(address _contract, uint256 amount) external onlyOwner {
        require(address(_contract) != address(0), "Token contract not set!");
        require(IBEP20(_contract).balanceOf(address(this)) >= amount, "Not enough!");
        IBEP20(_contract).transfer(tx.origin, amount);
    }
    function setConSys(address _contract) public onlyOwner {
        _sys = ISYS(_contract);
    }
    
    // SYS-------------------------
    function getSiteInfo()public view returns (uint256 u, uint256 acc,uint256 tPay, uint256 bnb,uint256 usd){
       (uint256 _u, uint256 _acc,uint256 _tPay, uint256 _bnb,uint256 _us) = _sys.getSiteInfo();
        u = _u;
        acc = _acc;
        tPay = _tPay;
        bnb = _bnb;
        usd = _us;
    }
    
    function register(address spon) external{
        _sys.register(spon);
    }
    function regNewAcc() external{
        _sys.regNewAcc();
    }

    function findLocal(bytes32 spon) external view returns (bytes32 lo, uint s){
        (bytes32 _lo, uint _s) = _sys.findLocal(spon);
        lo = _lo;
        s = _s;
    }
    function checkTop12(bytes32 _id, uint lv) external view returns(bool b){
        b = _sys.checkTop12(_id, lv);
    }
    function checkAccDeepGet(bytes32 id) external view returns(uint r, uint s){
        (uint _r, uint _s) = _sys.checkAccDeepGet(id);
        r = _r;
        s = _s;
    }
    
    function getUser(bytes32 id) external view returns (ISYS.User memory){
       return  _sys.getUser(id);
    }
    function getUserLevel(bytes32 id, uint idx) external view returns (uint){
        return  _sys.getUserLevel(id, idx);
    }
    function getUserRefList(bytes32 id) external view returns (bytes32[] memory){
        return _sys.getUserRefList(id);
    }
    function getTopListAll(uint n) external view returns (bytes32[] memory){
        return _sys.getTopListAll(n);
    }
    function iDOfAdd(address _addr) external view returns (bytes32[] memory){
        return _sys.iDOfAdd(_addr);
    }
    function iD2Addr(bytes32 _id) external view returns (address){
        return _sys.iD2Addr(_id);
    }
    function iD0(address a) external view returns (bytes32){
        return _sys.iD0(a);
    }
    function isLock(bytes32 id) external view returns (bool){
        return _sys.isLock(id);
    }
    function isMax(bytes32 id) external view returns(bool s){
        return _sys.isMax(id);
    }

    function payByUSD(bytes32 _id) external{
        return _sys.payByUSD(_id);
    }
    function getAdd2Pay(bytes32 _fromID, bytes32 _id, uint _genOld) external view returns (address a){
        return _sys.getAdd2Pay(_fromID, _id, _genOld);
    }
    function payAll(address _addr) external{
        return _sys.payAll(_addr);
    }
    function payStepAll(address _addr, uint step) external {
        return _sys.payStepAll(_addr, step);
    }
    function newAccAll(address _addr) external{
        return _sys.newAccAll(_addr);
    }
}