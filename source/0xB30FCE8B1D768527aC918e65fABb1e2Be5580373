
// File: contracts/logistics/RedeemLand.sol
// krippilippa
// SPDX-License-Identifier: MIT
pragma solidity ^0.8.4;

import "@openzeppelin/contracts/interfaces/IERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "interfaces/IPlanetPlot.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

contract RedeemLand is Ownable, Pausable{

    IERC721 public burnerPlot;
    address public planetPlot; 

    address public bank;

    constructor (address _bank, address _planetPlot, IERC721 _burnerPlot) Ownable() {
        bank = _bank;
        burnerPlot = _burnerPlot;
        planetPlot = _planetPlot;
    }

    function redeemLand(uint[] calldata _tokenIds) external whenNotPaused(){
        for (uint256 i = 0; i < _tokenIds.length; i++) {
            IERC721(burnerPlot).safeTransferFrom(msg.sender, bank, _tokenIds[i]);
            uint planet = _tokenIds[i] / 100_000;
            uint region = (_tokenIds[i] / 1000) % 100;
            uint index = _tokenIds[i] % 1000;

            if (planet == 11){
                planet = 101;
            } else if (planet == 12){
                planet = 102;
            } else {
                planet = 103;
            }

            uint plotXInRegion = index % 10;
            if(plotXInRegion == 0){
                plotXInRegion = 10;
            }

            uint plotYInRegion = (index / 10);
            if(plotXInRegion != 10){
                plotYInRegion++;
            }

            region--;
            uint regionX = region % 4;
            uint regionY = region / 4;
            uint x = regionX * 10 + plotXInRegion;
            uint y = regionY * 10 + plotYInRegion;

            uint plotId = planet * 1000_000_000;
            plotId = plotId + (region + 1) * 1000_000;
            plotId = plotId + x * 1000;
            plotId = plotId + y;

            IPlanetPlot(planetPlot).replenishPlot(plotId, 100);
            IERC721(planetPlot).safeTransferFrom(bank, msg.sender, plotId);
        }
    }

    function updateBank(address _newBank, address _planetPlot, IERC721 _burnerPlot) public onlyOwner(){
        bank = _newBank;
        burnerPlot = _burnerPlot;
        planetPlot = _planetPlot;
    }

    function pauseHandler() public onlyOwner(){
        _pause();
    }
    function unpauseHandler() public onlyOwner(){
        _unpause();
    }
}

