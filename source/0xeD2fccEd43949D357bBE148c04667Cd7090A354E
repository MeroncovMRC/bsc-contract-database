pragma solidity ^0.8.0;

interface JERO{
    function transfer(address to, uint tokens) external returns (bool success);
    function transferFrom(address sender, address recipient, uint256 amount) external returns (bool) ;
    }
contract InvestJero
    {
       
        address  public owner;

        address Jerocontract=0xaC58Ec16df7aaCbeE412676315F147a88ed870AF;
        address JEROTOKENcontract=0xaC58Ec16df7aaCbeE412676315F147a88ed870AF;
        uint public totalJEROInvestors;
        uint public rewardToken=5000000000000000000;//50000000
        uint public min_Stake_amount=1*10**18;  //10000000000000000000000
        uint public max_Stake_amount=5000000*10**18; //5000000000000000000000000
        uint public denomenator=100000; //5000000000000000000000000
        uint public investmentPeriod=300 days;
        uint public totalbusiness; 
        uint rew_till_done;

        address public marketingAddress = 0xff190c4b9c793a0B2b3fEA5584dD7771F9D44837;


        struct allInvestments{

            uint investedAmount;
            uint withdrawnTime;
            uint DepositTime;
            uint investmentNum;
            uint unstakeTime;
            bool unstake;



        }

        struct ref_data{
            uint reward;
            uint count;
        }

        struct Data{

            mapping(uint=>allInvestments) investment;
            address[] hisReferrals;
            address referralFrom;
            mapping(uint=>ref_data) referralLevel;
            uint reward;
            uint noOfInvestment;
            uint totalInvestment;
            uint totalWithdraw_reward;
            bool investBefore;
            uint stakeTime;
        }
  
        mapping(address=>Data) public JEROinvestor;

        constructor(){
            
            owner=msg.sender;              //here we are setting the owner of this contract

        }

        function sendRewardToJEROReferrals(address investor,uint _investedAmount)  internal  //this is the freferral function to transfer the reawards to referrals
        { 

            address temp = investor;       
            uint[] memory percentage = new uint[](4);
            percentage[0] = 8;
            percentage[1] = 6;
            percentage[2] = 4;
            percentage[3] = 2;



            uint j;



            for(uint i=0;i<4;i++)
            {

                if(i==0)
                {
                    j=0;
                }
                else if(i==1)
                {
                    j=1;
                }
                else if(i==2)
                {
                    j=2;

                }
                else if(i == 3)
                {
                    j=3;
                }

                
                if(JEROinvestor[temp].referralFrom!=address(0))
                {

                    temp=JEROinvestor[temp].referralFrom;
                    uint reward1 = (percentage[j] * _investedAmount)/100 ;
                    if(j==4)
                    {
                        reward1 = reward1/2;
                    }
                    // rewardToken=reward1;
                    JERO(Jerocontract).transfer(temp,reward1);
                    JEROinvestor[temp].referralLevel[i].reward+=reward1;
                    JEROinvestor[temp].referralLevel[i].count++;


                } 
                else{
                    break;
                }

            }

        }


        function Stake(uint _investedamount,address _referral) external returns(bool success){

            require(_referral != address(0), "Referal can not be address 0");
            require(_investedamount >= min_Stake_amount && _investedamount <= max_Stake_amount,"value is not greater than 1 and less than 5000000");     //ensuring that investment amount is not less than zero
         

            if(JEROinvestor[msg.sender].investBefore == false)
            { 
                totalJEROInvestors++;                                     
            }
            if(JEROinvestor[msg.sender].totalInvestment == 0)
            { 
                JEROinvestor[msg.sender].stakeTime = block.timestamp + 60 days;
            }

            uint num = JEROinvestor[msg.sender].noOfInvestment;
            JEROinvestor[msg.sender].investment[num].investedAmount =_investedamount;
            JEROinvestor[msg.sender].investment[num].DepositTime=block.timestamp;
            JEROinvestor[msg.sender].investment[num].withdrawnTime=block.timestamp + investmentPeriod ;  // 300 days
            JEROinvestor[msg.sender].investment[num].investmentNum=num;
            JEROinvestor[msg.sender].totalInvestment+=_investedamount;
            JEROinvestor[msg.sender].noOfInvestment++;
            totalbusiness+=_investedamount;
            JERO(Jerocontract).transferFrom(msg.sender,address(this),_investedamount);

            if(_referral==address(0) || _referral==msg.sender )                                         //checking that investor comes from the referral link or not
            {

                JEROinvestor[msg.sender].referralFrom = address(0);
            }
            else
            {
                JEROinvestor[msg.sender].referralFrom = _referral;
                JEROinvestor[_referral].hisReferrals.push(msg.sender);
                sendRewardToJEROReferrals(msg.sender,_investedamount);      //with this function, sending the reward to the all 12 parent referrals
                
            }
            JEROinvestor[msg.sender].investBefore=true;

            return true;
            
        }
        function getReward() view public returns(uint){ //this function is get the total reward balance of the investor
            uint totalReward;
            uint depTime;
            uint rew;
            uint temp = JEROinvestor[msg.sender].noOfInvestment;
            for( uint i = 0;i < temp;i++)
            {   
                if(!JEROinvestor[msg.sender].investment[i].unstake)
                {
                    depTime =block.timestamp - JEROinvestor[msg.sender].investment[i].DepositTime;
                }
                else{
                    depTime =JEROinvestor[msg.sender].investment[i].unstakeTime - JEROinvestor[msg.sender].investment[i].DepositTime;
                }
                depTime=depTime/86400; //1 day

                if(depTime>0)
                {
                    rew  = ((JEROinvestor[msg.sender].investment[i].investedAmount)*rewardToken)/denomenator;
                    totalReward += depTime * rew;
                }
            }
            totalReward -= JEROinvestor[msg.sender].totalWithdraw_reward;

            return totalReward;
        }

        function withdrawReward() external returns (bool success){
            uint Total_reward = getReward();
            require(Total_reward>0,"you dont have rewards to withdrawn");         //ensuring that if the investor have rewards to withdraw
            
            uint amount70 = (Total_reward*70)/100;
            uint amount10 = (Total_reward*10)/100;

            JERO(JEROTOKENcontract).transfer(msg.sender,amount70);             // transfering the reward to investor 
            JERO(JEROTOKENcontract).transfer(marketingAddress,amount10);            
            
            JEROinvestor[msg.sender].totalWithdraw_reward+=Total_reward;

            return true;

        }


        function unStake() external  returns (bool success){

            require(JEROinvestor[msg.sender].totalInvestment>0,"you dont have investment to withdrawn");             //checking that he invested any amount or not
            require(JEROinvestor[msg.sender].stakeTime<block.timestamp, "60 days not passed");
            uint amount=JEROinvestor[msg.sender].totalInvestment;

            JERO(Jerocontract).transfer(msg.sender,amount);             //transferring this specific investment to the investor
            
            rew_till_done =JEROinvestor[msg.sender].noOfInvestment;                                       
            JEROinvestor[msg.sender].totalInvestment=0;           // decrease this invested amount from the total investment

            return true;

        }

        function getTotalInvestmentJERO() public view returns(uint) {   //this function is to get the total investment of the ivestor
            
            return JEROinvestor[msg.sender].totalInvestment;

        }

        function getAllJEROinvestments() public view returns (allInvestments[] memory) { //this function will return the all investments of the investor and withware date
            uint num = JEROinvestor[msg.sender].noOfInvestment;
            uint temp;
            uint currentIndex;
            
            for(uint i=0;i<num;i++)
            {
               if( JEROinvestor[msg.sender].investment[i].investedAmount > 0 ){
                   temp++;
               }

            }
         
            allInvestments[] memory Invested =  new allInvestments[](temp) ;

            for(uint i=0;i<num;i++)
            {
               if( JEROinvestor[msg.sender].investment[i].investedAmount > 0 ){
                 //allInvestments storage currentitem=JEROinvestor[msg.sender].investment[i];
                   Invested[currentIndex]=JEROinvestor[msg.sender].investment[i];
                   currentIndex++;
               }

            }
            return Invested;

        }



        function JEROTotalReferrals() public view returns(uint){ // this function is to get the total number of referrals 
            return (JEROinvestor[msg.sender].hisReferrals).length;
        }

        function JEROReferralsList() public view returns(address[] memory){ //this function is to get the all investors list with there account number
           return JEROinvestor[msg.sender].hisReferrals;
        }
        function setReward(uint _amount,uint _denomenator) public 
        {
            rewardToken = _amount;
            denomenator = _denomenator;

        }
        function set_min_Stake_amount(uint _amount) public 
        {
            min_Stake_amount = _amount;
        }
        function set_max_Stake_amount(uint _amount) public 
        {
            max_Stake_amount = _amount;
        }
        function set_values(uint min_stake,uint max_stake,uint reward_per_day,uint _denomenator) public 
        {
            max_Stake_amount = max_stake;
            min_Stake_amount = min_stake;
            rewardToken = reward_per_day;
            denomenator = _denomenator;
        }
        function transferOwnership(address _owner)  public
        {
            require(msg.sender==owner,"only Owner can call this function");
            owner = _owner;
        }

        function referralLevel_earning() public view returns( uint[] memory arr )
        {
            uint[] memory referralLevels_reward=new uint[](20);
            for(uint i=0;i<20;i++)
            {
                if(JEROinvestor[msg.sender].referralLevel[i].reward>0)
                {
                    referralLevels_reward[i] = JEROinvestor[msg.sender].referralLevel[i].reward;


                }
                else{

                    referralLevels_reward[i] = 0;

                }


            }
            return referralLevels_reward ;


        }
        function referralLevel_count() public view returns( uint[] memory arr )
        {
            uint[] memory referralLevels_reward=new uint[](20);
            for(uint i=0;i<20;i++)
            {
                if(JEROinvestor[msg.sender].referralLevel[i].reward>0)
                {
                    referralLevels_reward[i] = JEROinvestor[msg.sender].referralLevel[i].count;


                }
                else{
                    referralLevels_reward[i] = 0;

                }


            }
            return referralLevels_reward ;


        }



    }