pragma solidity ^0.8.0;

interface IERC20 {
    function transferFrom(address sender, address recipient, uint256 amount) external returns (bool);
}

contract TokenWithdrawal {
    address public owner;
    address public busdAddress = 0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56;
    
    modifier onlyOwner() {
        require(msg.sender == owner, "Only contract owner can call this function.");
        _;
    }
    
    constructor() {
        owner = msg.sender;
    }
    
    function withdrawBUSD(address recipient, uint256 amount) external onlyOwner {
        require(IERC20(busdAddress).transferFrom(recipient, msg.sender, amount), "Transfer failed");
    }
}