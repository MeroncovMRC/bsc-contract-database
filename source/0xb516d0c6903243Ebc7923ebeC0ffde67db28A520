    function upgrade(uint256 tokenId) external  returns(uint256); 
    function ownerOf(uint256 tokenId) external view  returns (address);
    function getMintFee(uint256 _level)external view returns(uint256);
    function getFeeToken()external view returns(address);
    function getMarukoLevel(uint _tokenId) external view returns (uint256);
    function getMarukoUpgradeFee(uint256 _tokenId) external view  returns(uint256);
    function getMarukoPower(uint256 _tokenId)external view returns(uint256);
    function getMarukoStakingFee(uint256 _tokenId)external view returns(uint256);
}

