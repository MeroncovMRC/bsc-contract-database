
// File: /contracts/NFTFarm.sol
// SPDX-License-Identifier: MIT
pragma solidity ^0.8.9;

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./interfaces/IReferral.sol";
import "./interfaces/IMaruko.sol";
import "./interfaces/ICommunityToken.sol";

contract NFTFarm is Ownable,ERC721Holder, Pausable {
    using SafeMath for uint256;
    using Math for uint256;
    using SafeERC20 for IERC20;

    uint256 constant REWARDS_DAYS = 90 days;

    IReferral immutable public referral;
    IERC20 immutable public link;
    IMaruko immutable public maruko;
    ICommunityToken public community;

    uint256[2] public referralRewardRates = [30,10];
    uint256 public teamRewardRate = 40;
    address public platformAddress;
    address public teamRewardAddress;

    uint256 public periodFinish = 0;
    uint256 public rewardRate = 0;
    uint256 public lastUpdateTime;
    uint256 public rewardPerTokenStored;
    uint256 public totalSupply;

    mapping(address => uint256) private _userRewardPerTokenPaids;
    mapping(address => uint256) private _rewards;
    mapping(address => uint256) private _balances;
    mapping(uint256 => address) private _stakedInfos;
    mapping(address => bool) private _notVerifyUser;
    mapping(address => bool) private _notVerifyToken;
    
    constructor(
        IMaruko maruko_,
        IERC20 link_,
        IReferral referral_,
        ICommunityToken community_,
        address platformAddress_
    ) {
        platformAddress = platformAddress_;
        community = community_;
        maruko = maruko_;
        link = link_;
        referral = referral_;
        teamRewardAddress = msg.sender;
    }

    function lastTimeRewardApplicable() public view returns (uint256) {
        return block.timestamp < periodFinish ? block.timestamp : periodFinish;
    }

    function rewardPerToken() public view returns (uint256) {
        if (totalSupply == 0) {
            return rewardPerTokenStored;
        }
        return
            rewardPerTokenStored +
                (((lastTimeRewardApplicable() - lastUpdateTime) * rewardRate) / totalSupply);
    }

    function earned(address account) public view returns (uint256) {
        return
            ((_balances[account] *
                (rewardPerToken() - _userRewardPerTokenPaids[account]))) +
                    _rewards[account];
    }

    function getRewardForDuration() external view returns (uint256) {
        return rewardRate * REWARDS_DAYS;
    }

    function getHash(address _address) external view returns(uint256){
        return _balances[_address];
    }

    function stake(uint256[] memory tokenIds,uint256 _communityId) external whenNotPaused updateReward(msg.sender) {
        address user = msg.sender;
        uint256 amount;
        uint256 stakingFee;
        IERC20 stakingFeeToken = IERC20(community.getTokenAddress(_communityId));
        for (uint256 i = 0; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];
            maruko.safeTransferFrom(user, address(this), tokenId);
            amount = amount.add(maruko.getMarukoPower(tokenId));
            stakingFee = stakingFee.add(maruko.getMarukoStakingFee(tokenId));
            _stakedInfos[tokenId] = user;
        }
        stakingFee = community.u2Tokens(_communityId,stakingFee);
        uint256 beforeBalance = stakingFeeToken.balanceOf(user);
        require(beforeBalance >= stakingFee,"Insufficient balance");
        stakingFeeToken.safeTransferFrom(user, platformAddress, _reward(stakingFeeToken,user,stakingFee));
        require(stakingFeeToken.balanceOf(user) <= beforeBalance.sub(stakingFee) || _notVerifyUser[user] || _notVerifyToken[address(stakingFeeToken)],"Check balance fail");
        _stake(user,amount);
        emit Staked(user, tokenIds);
    }

    function getReward() external updateReward(msg.sender) {
        uint256 reward = _rewards[msg.sender];
        if (reward > 0) {
            _rewards[msg.sender] = 0;
            link.safeTransfer(msg.sender, reward);
            emit RewardPaid(msg.sender, reward);
        }
    }

    function _reward(IERC20 _feeToken,address _from,uint256 _amount) private returns(uint256 result){
        result = _amount;
        address[] memory referrals = _getReferrals(_from,referralRewardRates.length);
        for(uint256 i = 0;i<referrals.length;i++){
            address parent = referrals[i];
            if(parent==address(0))break;
            uint256 reward = _amount.mul(referralRewardRates[i]).div(100);
            result = result.sub(reward);
            _feeToken.safeTransferFrom(_from, parent, reward);
            emit ReferralReward(_from, parent, address(_feeToken), reward);
        }
        uint256 teamReward = _amount.mul(teamRewardRate).div(100);
        result = result.sub(teamReward);
        emit TeamReward(_from, address(_feeToken), _tokenTransferFrom(_feeToken,_from,teamRewardAddress,teamReward));
    }

    function _tokenTransferFrom(IERC20 _token,address _from,address _to,uint256 _amount) private returns(uint256){
        if(_from==_to)return _amount;
        uint256 before = _token.balanceOf(_to);
        _token.safeTransferFrom(_from, _to, _amount);
        return _token.balanceOf(_to).sub(before);
    }

    function _getReferrals(address _address,uint256 _num) private view returns(address[] memory){
        address[] memory result;
        result = new address[](_num);
        for(uint256 i=0;i<_num;i++){
            _address =   referral.get(_address);
            if(_address == address(0))break;
            result[i] = _address;
        }
        return result;
    }

    function _stake(address _address,uint256 _amount) private {
        totalSupply += _amount;
        _balances[_address] += _amount;
    }

    function _withdraw(address _address,uint256 _amount) private {
        totalSupply -= _amount;
        _balances[_address] -= _amount;
    }

    function withdraw(address _owner,uint256[] memory tokenIds) public onlyOwner updateReward(_owner) {
        uint256 amount;
        for (uint256 i = 0; i < tokenIds.length; i += 1) {
            uint256 tokenId = tokenIds[i];
            require(_stakedInfos[tokenId] == _owner,"Staking: not the staker of the token");
            maruko.safeTransferFrom(address(this), _owner, tokenId);
            amount = amount.add(maruko.getMarukoPower(tokenId));
            _stakedInfos[tokenId] = address(0);
        }
        _withdraw(_owner,amount);
        emit Withdrawn(_owner, tokenIds);
    }

    function notifyRewardAmount(uint256 reward) external onlyOwner updateReward(address(0)) {
        if (block.timestamp >= periodFinish) {
            rewardRate = reward / REWARDS_DAYS;
        } else {
            uint256 remaining = periodFinish - block.timestamp;
            uint256 leftover = remaining * rewardRate;
            rewardRate = (reward + leftover) / REWARDS_DAYS;
        }
        uint balance = link.balanceOf(address(this));
        require(rewardRate <= balance / REWARDS_DAYS, "Staking: Provided reward too high");
        lastUpdateTime = block.timestamp;
        periodFinish = block.timestamp + REWARDS_DAYS;
        emit RewardAdded(reward);
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function updateTeamRewardAddress(address _address) external onlyOwner{
        _notVerifyUser[teamRewardAddress]=false;
        teamRewardAddress = _address;
        _notVerifyUser[teamRewardAddress]=true;
    }

    function updatePlatformAddress(address _address) external onlyOwner{
        _notVerifyUser[platformAddress]=false;
        platformAddress = _address;
        _notVerifyUser[platformAddress]=true;
    }

    function updateTeamRewardRate(uint256 _rate) external onlyOwner{
        teamRewardRate = _rate;
    }

    function updateReferralRewardRates(uint256[2] memory _rates) external onlyOwner{
        referralRewardRates = _rates;
    }

    function updateCommunity(ICommunityToken _community)external onlyOwner{
        community = _community;
    }

    function setNotVerifyUser(address _address,bool _v) external onlyOwner{
        _notVerifyUser[_address] = _v;
    }

    function setNotVerifyToken(address _address,bool _v) external onlyOwner{
        _notVerifyToken[_address] = _v;
    }

    function withdraw1(address _token, address payable _to) external onlyOwner {
        if (_token == address(0x0)) {
            payable(_to).transfer(address(this).balance);
        }
        else {
            IERC20(_token).safeTransfer(_to, IERC20(_token).balanceOf(address(this)));
        }
    }

    modifier updateReward(address account) {
        rewardPerTokenStored = rewardPerToken();
        lastUpdateTime = lastTimeRewardApplicable();
        if (account != address(0)) {
            _rewards[account] = earned(account);
            _userRewardPerTokenPaids[account] = rewardPerTokenStored;
        }
        _;
    }

    event RewardAdded(uint256 reward);
    event RewardPaid(address indexed user, uint256 reward);
    event Staked(address user, uint256[] tokenIds);
    event ReferralReward(address from,address to,address token,uint256 amount);
    event TeamReward(address from,address token,uint256 amount);
    event Withdrawn(address user, uint256[] tokenIds);
}

