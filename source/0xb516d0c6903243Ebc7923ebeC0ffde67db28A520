interface IReferral {

    /* ========== 事件 ========== */
    event ReferraledBound(address p,address u);
    
    /* ========== 查询函数 ========== */
    //获取用户邀请人地址
    function get(address _u) external view returns(address);

    function getReferralCount(address _address)external view returns(uint256);

    //获取用户是否绑定邀请人
    function isBind(address _u) external view returns(bool);
}

