pragma solidity ^0.8.9;

interface IERC721Receiver {
    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external returns (bytes4);
}

interface INonfungiblePositionManager {
    function safeTransferFrom(address, address, uint256) external;
}


contract PCSV3 is IERC721Receiver {
    INonfungiblePositionManager public nftPositionManager;
    address public masterChef;

    constructor(
        address _nftPositionManager,
        address _masterChef
    ) {
        nftPositionManager = INonfungiblePositionManager(_nftPositionManager);
        masterChef = _masterChef;
    }


    function addToFarming(uint256 _tokenId) public {
        nftPositionManager.safeTransferFrom(
            address(this),
            address(masterChef),
            _tokenId
        );
    }

    function onERC721Received(
        address operator,
        address,
        uint256 tokenId,
        bytes calldata
    ) external returns (bytes4) {
        return this.onERC721Received.selector;
    }
}