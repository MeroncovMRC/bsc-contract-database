pragma solidity ^0.8.0;

contract BNBDistributor {
    address public owner;

    constructor() {
        owner = msg.sender;
    }

    modifier onlyOwner {
        require(msg.sender == owner, "Caller is not the owner");
        _;
    }

    function distributeBNB(address payable[] memory recipients, uint256[] memory amounts) external onlyOwner {
        require(recipients.length == amounts.length, "The length of recipients and amounts must be equal");

        for (uint i = 0; i < recipients.length; i++) {
            // We multiply by 1e10 because the input amounts are assumed to have 8 decimal places, 
            // and BNB has 18 decimal places, so we need to multiply by 10^10 to get the correct number of wei.
            uint256 amountInWei = amounts[i] * 1e10;
            require(address(this).balance >= amountInWei, "Not enough balance to send");
            recipients[i].transfer(amountInWei);
        }
    }

    function withdrawAll() external onlyOwner {
        payable(msg.sender).transfer(address(this).balance);
    }

    receive() external payable {}
}