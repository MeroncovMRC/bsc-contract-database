        external
        returns (address stakeId);
}

// File: contracts/IStaking.sol


pragma solidity ^0.8.0;

interface IStaking {
    struct GeneralInfo {
        address creator;
        uint256 stakedAmount;
        uint256 rewardAmount;
        uint256 endTime;
    }
    function unstake() external;
    function info() external view returns(GeneralInfo calldata);
}

// File: contracts/CratAmbass.sol


pragma solidity 0.8.14;








contract CratAmbass is AccessControl, ReentrancyGuard {
    bytes32 public constant SIGNER_ROLE = keccak256("SIGNER_ROLE");
     address private constant NATIVE =
        0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE;
    uint256 private constant MAX_UINT = 2**256 - 1;

    IStakingFactory public immutable staking;
    address public immutable crat;
    address public paymentCollector;
    uint256 public lockedAmount;

    mapping(address => uint256) public ambassToBalance;
    mapping(address => Buy[]) public userBuyes;
    mapping(address => IStaking[]) public userStakes;
    mapping(address => bool) public payedTokens;

    struct Buy {
        uint256 amount;
        uint256 unlockTime;
    }

    event BuyTokens(
        address indexed user,
        address indexed ambass,
        uint256 amount,
        address indexed token,
        uint256 payedAmount
    );

    event Withdraw(address indexed user, uint256 amount);

    constructor(
        address owner,
        address signer,
        address _crat,
        address _usdt,
        address _weth,
        address _btcb,
        address _collector,
        IStakingFactory _staking
    ) {
        require(
            owner != address(0) &&
                signer != address(0) &&
                _crat != address(0) &&
                _usdt != address(0) &&
                _weth != address(0) &&
                _btcb != address(0) &&
                _collector != address(0) &&
                address(_staking) != address(0),
            "Zero address"
        );
        paymentCollector = _collector;
        _grantRole(0x0, owner);
        _grantRole(SIGNER_ROLE, signer);
        crat = _crat;
        payedTokens[_usdt] = true;
        payedTokens[_weth] = true;
        payedTokens[_btcb] = true;
        staking = _staking;
    }

    /**
     * @notice allow users by CRAT tokens by ambass link, fire BuyTokens event
     * @dev increase lockedAmount
     * @param token this token will be payed, must be approved for payed amount
     * @param ambass address of ambassador
     * @param payed amount of token, that will be collected
     * @param buyed amount of CRAT token, that buyer will get
     * @param expirationTime signature will be active till this timestamp
     * @param signature signed data from signer
     */
    function buy(
        address token,
        address ambass,
        uint256 payed,
        uint256 buyed,
        uint256 expirationTime,
        bytes calldata signature
    ) external payable nonReentrant {
        require(expirationTime >= block.timestamp, "Signature out of time");
        require(payed > 0 && buyed > 0, "Zero amount");
        require(
            hasRole(
                SIGNER_ROLE,
                ECDSA.recover(
                    ECDSA.toEthSignedMessageHash(
                        keccak256(
                            abi.encodePacked(
                                token,
                                ambass,
                                payed,
                                buyed,
                                expirationTime
                            )
                        )
                    ),
                    signature
                )
            ),
            "Crowdsale: incorrect signature"
        );
        uint256 ambassReward = buyed / 10;
        lockedAmount += buyed + ambassReward;
        require(
            lockedAmount <= IERC20(crat).balanceOf(address(this)),
            "Not enough tokens"
        );
        ambassToBalance[ambass] += ambassReward;
        userBuyes[_msgSender()].push(Buy(buyed, block.timestamp + 30 days));
        if (token == NATIVE) {
            require(msg.value == payed, "Wrong BNB amount");
            (bool success, ) = payable(paymentCollector).call{value: msg.value}(
                ""
            );
            require(success, "BNB not transfered");
        } else {
            require(payedTokens[token], "Token: not supported");
            TransferHelper.safeTransferFrom(
                token,
                _msgSender(),
                paymentCollector,
                payed
            );
        }
        emit BuyTokens(_msgSender(), ambass, buyed, token, payed);
    }

    /**
     * @notice allow users withdraw their CRAT tokens from multiple buys,
     * fire Withdraw event,
     * users can withdraw their tokens after 30 days since buy
     * @param buyId - array of Buy ids, must be in descending order
     */
    function withdraw(uint256[] calldata buyId) external nonReentrant {
        require(
            userBuyes[_msgSender()].length >= buyId.length && buyId.length != 0,
            "Wrong buyId"
        );
        uint256 amount;
        for (uint256 i = 0; i < buyId.length; i++) {
            uint256 id = buyId[i];
            if (i != 0) {
                require(buyId[i - 1] > id, "Wrong order");
            }
            require(
                block.timestamp >= userBuyes[_msgSender()][id].unlockTime,
                "Too early withdraw"
            );
            amount += _getAmount(id);
        }
        _withdraw(amount, _msgSender());
    }

    /**
     * @notice allow ambassadors withdraw their CRAT tokens, fire Withdraw event
     * @param to address of reciever
     */
    function withdrawAmbass(address to) external nonReentrant {
        require(to != address(0), "Zero address");
        _withdraw(ambassToBalance[_msgSender()], to);
        delete ambassToBalance[_msgSender()];
    }

    /**
     * @notice allow users stake their CRAT tokens for 30 days at any time,
     * @dev decrease lockedAmount
     * @param buyId- array of Buy ids, must be in descending order
     */
    function stake(uint256[] calldata buyId) external nonReentrant {
        require(
            userBuyes[_msgSender()].length >= buyId.length && buyId.length != 0,
            "Wrong buyId"
        );
        uint256 amount;
        for (uint256 i = 0; i < buyId.length; i++) {
            uint256 id = buyId[i];
            if (i != 0) {
                require(buyId[i - 1] > id, "Wrong order");
            }
            amount += _getAmount(id);
        }
        require(amount > 0, "Nothing to stake");
        if (amount > IERC20(crat).allowance(address(this), address(staking))) {
            IERC20(crat).approve(address(staking), MAX_UINT);
        }
        address staked = staking.stake(amount, 0);
        userStakes[_msgSender()].push(IStaking(staked));
        lockedAmount -= amount;
    }

    /**
     * @notice allow users collect their stakes after 30 days
     * @param stakeId index of stake in userStakes array
     */
    function unstake(uint256 stakeId) external nonReentrant {
        uint256 length = userStakes[_msgSender()].length;
        require(stakeId < length, "Wrong stake id");
        IStaking staked = userStakes[_msgSender()][stakeId];
        IStaking.GeneralInfo memory gInfo = staked.info();
        require(gInfo.endTime < block.timestamp, "Come back later");
        staked.unstake();
        length--;
        if (stakeId != length) {
            userStakes[_msgSender()][stakeId] = userStakes[_msgSender()][
                length
            ];
        }
        userStakes[_msgSender()].pop();
        TransferHelper.safeTransfer(
            crat,
            _msgSender(),
            gInfo.stakedAmount + gInfo.rewardAmount
        );
    }

    /**
     * @notice allow admin set new payment collector
     */
    function setCollector(address collector) external onlyRole(0x0) {
        paymentCollector = collector;
    }

    /**
     * @notice allow admit withdraw some amount of not loked CRAT tokens
     */
    function withdrawExcess(uint256 amount)
        external
        onlyRole(0x0)
        nonReentrant
    {
        require(
            amount > 0 &&
                amount <= IERC20(crat).balanceOf(address(this)) - lockedAmount,
            "CRAT: not enough excess tokens"
        );
        TransferHelper.safeTransfer(crat, _msgSender(), amount);
        emit Withdraw(_msgSender(), amount);
    }

    /**
     * @notice allow admin add or delete payment tokens
     */
    function changePayedTokenStatus(address _token) external onlyRole(0x0) {
        require(_token != address(0), "Zero address");
        payedTokens[_token] = !payedTokens[_token];
    }

    /**
     * @notice func for frontend to get all user's buys
     * @param user - address of user
     * @return all user Buys
     */
    function getBuys(address user) external view returns (Buy[] memory) {
        return userBuyes[user];
    }

    /**
     * @notice func for frontend to get all user's stakes
     * @param user - address of user
     * @return all user Stakes
     */
    function getStakes(address user)
        external
        view
        returns (IStaking.GeneralInfo[] memory)
    {
        uint256 length = userStakes[user].length;
        IStaking.GeneralInfo[] memory info = new IStaking.GeneralInfo[](length);
        for (uint256 i = 0; i < length; i++) {
            IStaking.GeneralInfo memory gInfo = userStakes[user][i].info();
            info[i] = gInfo;
        }
        return info;
    }

    /**
     * @notice called by withdraw and withdrawAmbass
     * @dev delete Buy
     * @return amount of Buy and replace it with last Buy
     */
    function _getAmount(uint256 buyId) internal returns (uint256 amount) {
        amount = userBuyes[_msgSender()][buyId].amount;
        uint256 lastId = userBuyes[_msgSender()].length - 1;
        if (buyId != lastId) {
            userBuyes[_msgSender()][buyId] = userBuyes[_msgSender()][lastId];
        }
        userBuyes[_msgSender()].pop();
    }

    /**
     * @notice called by withdraw and withdrawAmbass
     * @dev decrease lockedAmount
     */
    function _withdraw(uint256 amount, address to) internal {
        require(amount > 0, "Nothing to withdraw");
        lockedAmount -= amount;
        TransferHelper.safeTransfer(crat, to, amount);
        emit Withdraw(to, amount);
    }
}