
// File: /contracts/Rail.sol
// SPDX-License-Identifier: MIT

pragma solidity >=0.8.0 <0.9.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "@openzeppelin/contracts/utils/introspection/IERC165.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Address.sol";

import "./utils/IAmountFactor.sol";
import "./utils/ITimeFactor.sol";
import "./utils/LocoNft.sol";

contract Rail is Ownable, ERC1155Holder {
    using SafeMath for uint256;
    using Address for address;

    /* solhint-disable const-name-snakecase */
    bytes4 public constant IID_LocoNft = type(LocoNft).interfaceId;
    bytes4 public constant IID_ITimeFactor = type(ITimeFactor).interfaceId;
    bytes4 public constant IID_IAmountFactor = type(IAmountFactor).interfaceId;
    /* solhint-enable const-name-snakecase */

    enum Types {
        TimeFactor,
        AmountFactor
    }

    struct NFT {
        address nftAddress;
        Types nftType;
        bool required;
        bool multiple;
    }

    struct TrainNft {
        address nftAddress;
        uint256 id;
        uint256 amount;
    }

    struct Train {
        address userAddress;
        uint256 startedDate;
        uint256 endedDate;
        uint256 earning;
        uint256 day;
        uint256 nextEarning;
        uint256 nextEndedDate;
        uint256 nextDay;
        uint256 withdraws;
        uint256 periodCount;
        mapping(address => TrainNft) nfts;
    }

    event TrainCreated(
        address userAddress,
        address[] nftAddresses,
        uint256[] nftIds,
        uint256[] nftAmounts
    );
    event TrainStarted(
        address userAddress,
        uint256 startedDate,
        uint256 endedDate,
        uint256 earning,
        uint256 day
    );
    event TrainNftRemoved(
        address userAddress,
        address nftAddress,
        uint256 nftId,
        uint256 nftAmount
    );
    event TrainStopped(address userAddress);
    event TrainNftAdded(address userAddress, address nftAddress, uint256 nftId, uint256 nftAmount);
    event TrainWithdraw(address userAddress, uint256 amount);
    event TrainNextEarningChanged(address userAddress, uint256 nextEarning);
    event TrainNextDayChanged(address userAddress, uint256 nextDay);
    event TrainEarningChanged(address userAddress, uint256 earning);
    event TrainDayChanged(address userAddress, uint256 day);

    uint8[] private _nftOrder;
    mapping(address => NFT) private _nfts;
    mapping(uint8 => NFT) private _orderedNft;
    NFT[] private _nftsArray;

    mapping(address => Train) private _trains;

    IERC20 private _token;

    constructor(address tokenAddress) {
        _token = IERC20(tokenAddress);
    }

    function getNftOrder() public view returns (uint8[] memory) {
        return _nftOrder;
    }

    function getNft(address nftAddress) public view returns (NFT memory) {
        return _nfts[nftAddress];
    }

    function getOrderedNft(uint8 index) public view returns (NFT memory) {
        return _orderedNft[index];
    }

    function getNfts() public view returns (NFT[] memory) {
        return _nftsArray;
    }

    function addNft(
        address nftAddress,
        bool required,
        bool multiple
    ) public onlyOwner {
        require(IERC165(nftAddress).supportsInterface(IID_LocoNft), "NFT must be Loco NFT");

        uint8 order = LocoNft(nftAddress).order();

        require(_orderedNft[order].nftAddress == address(0), "NFT order already added");

        Types nftType;

        if (IERC165(nftAddress).supportsInterface(IID_ITimeFactor)) {
            nftType = Types.TimeFactor;
        } else if (IERC165(nftAddress).supportsInterface(IID_IAmountFactor)) {
            nftType = Types.AmountFactor;
        } else {
            revert("NFT must be one of Time or Amount Factor.");
        }

        _nfts[nftAddress].nftAddress = nftAddress;
        _nfts[nftAddress].nftType = nftType;
        _nfts[nftAddress].required = required;
        _nfts[nftAddress].multiple = multiple;

        _orderedNft[order] = _nfts[nftAddress];
        _nftsArray.push(_nfts[nftAddress]);

        bool isOrderAdded = false;
        uint8 bfr;
        uint8 bfr2;

        _nftOrder.push(order);

        for (uint8 i = 0; i < _nftOrder.length; i++) {
            if (_nftOrder[i] < order) {
                continue;
            } else if (!isOrderAdded) {
                bfr = _nftOrder[i];
                _nftOrder[i] = order;
                isOrderAdded = true;
            } else {
                bfr2 = _nftOrder[i];
                _nftOrder[i] = bfr;
                bfr = bfr2;
            }
        }
    }

    function createTrain(
        address[] memory nftAddresses,
        uint256[] memory ids,
        uint256[] memory amounts
    ) public trainNotExist {
        require(nftAddresses.length > 0, "Train must have at least one NFT");
        require(nftAddresses.length == ids.length, "All length must be equal");
        require(nftAddresses.length == amounts.length, "All length must be equal");

        Train storage train = _trains[_msgSender()];

        train.userAddress = _msgSender();
        train.day = 60;

        for (uint256 i; i < nftAddresses.length; i++) {
            address nftAddress = nftAddresses[i];

            if (_nfts[nftAddress].nftAddress != nftAddress) {
                revert("This address can't use for this function");
            }

            if (!_nfts[nftAddress].multiple && amounts[i] > 1) {
                revert("You must add only one nft for this kind");
            }

            if (amounts[i] == 0) {
                revert("You must add at least one nft");
            }

            IERC1155(nftAddress).safeTransferFrom(
                _msgSender(),
                address(this),
                ids[i],
                amounts[i],
                ""
            );

            train.nfts[nftAddress].nftAddress = nftAddress;
            train.nfts[nftAddress].id = ids[i];
            train.nfts[nftAddress].amount = amounts[i];

            emit TrainNftAdded(_msgSender(), nftAddress, ids[i], amounts[i]);
        }

        emit TrainCreated(_msgSender(), nftAddresses, ids, amounts);
    }

    function stopTrain() public trainExist {
        Train storage train = _trains[_msgSender()];

        /* solhint-disable not-rely-on-time */
        require(block.timestamp > train.startedDate, "You can't stop train before started");
        require(block.timestamp < train.endedDate, "You can't stop before withdraw");
        /* solhint-enable not-rely-on-time */

        train.endedDate = 0;
        train.startedDate = 0;
        train.earning = 0;
        train.day = 0;
        train.nextEndedDate = 0;
        train.nextDay = 0;
        train.nextEarning = 0;

        emit TrainStopped(_msgSender());
    }

    function takeTrainNft(
        address nftAddress,
        uint256 id,
        uint256 amount
    ) public trainExist {
        require(
            _nfts[nftAddress].nftAddress == nftAddress,
            "This address can't use for this function"
        );
        require(amount > 0, "You must take at least one nft");

        Train storage train = _trains[_msgSender()];

        require(train.nfts[nftAddress].nftAddress == nftAddress, "You must add this nft before");
        require(train.nfts[nftAddress].id == id, "You must add this nft before");
        require(train.nfts[nftAddress].amount >= amount, "You don't have this amount");

        /* solhint-disable not-rely-on-time */
        require(train.startedDate == 0, "Train must be stopped before take nft");
        /* solhint-enable not-rely-on-time */

        train.nfts[nftAddress].amount -= amount;

        if (train.nfts[nftAddress].amount == 0) {
            train.nfts[nftAddress].nftAddress = address(0);
            train.nfts[nftAddress].id = 0;
        }

        IERC1155(nftAddress).safeTransferFrom(address(this), _msgSender(), id, amount, "");

        emit TrainNftRemoved(_msgSender(), nftAddress, id, amount);
    }

    function addTrainNft(
        address nftAddress,
        uint256 id,
        uint256 amount
    ) public trainExist {
        require(
            _nfts[nftAddress].nftAddress == nftAddress,
            "This address can't use for this function"
        );
        require(amount > 0, "You must add at least one nft");

        Train storage train = _trains[_msgSender()];
        TrainNft storage trainNft = train.nfts[nftAddress];

        require(
            (!_nfts[nftAddress].multiple && amount == 1) || _nfts[nftAddress].multiple,
            "You must add only one nft for this kind"
        );

        if (trainNft.nftAddress == nftAddress) {
            if (trainNft.id > id && trainNft.amount != 0) {
                revert("You already have better level of this Nft");
            }

            if (trainNft.amount != 0 && trainNft.id < id) {
                IERC1155(nftAddress).safeTransferFrom(
                    address(this),
                    _msgSender(),
                    trainNft.id,
                    trainNft.amount,
                    ""
                );

                emit TrainNftRemoved(_msgSender(), nftAddress, trainNft.id, trainNft.amount);

                trainNft.amount = 0;
            }
        }

        IERC1155(nftAddress).safeTransferFrom(_msgSender(), address(this), id, amount, "");

        trainNft.nftAddress = nftAddress;
        trainNft.id = id;
        trainNft.amount += amount;

        (train.nextEarning, train.nextDay, ) = _calculateVariables(train);
        train.nextEndedDate = train.endedDate + (train.nextDay * 1 days);

        if (train.nextDay != train.day) {
            emit TrainNextDayChanged(_msgSender(), train.nextDay);
        }

        if (train.nextEarning != train.earning) {
            emit TrainNextEarningChanged(_msgSender(), train.nextEarning);
        }

        emit TrainNftAdded(_msgSender(), nftAddress, id, amount);
    }

    function getTrain()
        public
        view
        returns (
            uint256 startedDate,
            uint256 endedDate,
            uint256 earning,
            uint256 day,
            uint256 nextEarning,
            uint256 nextEndedDate,
            uint256 nextDay,
            uint256 withdraws,
            uint256 periodCount,
            address useraddrs,
            TrainNft[] memory nfts
        )
    {
        startedDate = _trains[_msgSender()].startedDate;
        endedDate = _trains[_msgSender()].endedDate;
        earning = _trains[_msgSender()].earning;
        day = _trains[_msgSender()].day;
        nextEarning = _trains[_msgSender()].nextEarning;
        nextEndedDate = _trains[_msgSender()].nextEndedDate;
        nextDay = _trains[_msgSender()].nextDay;
        withdraws = _trains[_msgSender()].withdraws;
        periodCount = _trains[_msgSender()].periodCount;
        useraddrs = _trains[_msgSender()].userAddress;

        nfts = new TrainNft[](_nftOrder.length);
        TrainNft memory trainNft;

        for (uint256 i; i < _nftOrder.length; i++) {
            trainNft = _trains[_msgSender()].nfts[_orderedNft[_nftOrder[i]].nftAddress];

            if (trainNft.nftAddress != address(0) && trainNft.amount != 0) {
                nfts[i] = trainNft;
            }
        }
    }

    function startTrain() public trainExist {
        Train storage train = _trains[_msgSender()];

        require(train.startedDate == 0, "You already started your train");

        bool start;

        (train.earning, train.day, start) = _calculateVariables(train);

        require(start, "You don't have some of necessary nfts");

        /* solhint-disable not-rely-on-time */
        train.startedDate = block.timestamp;
        /* solhint-enable not-rely-on-time */
        train.endedDate = train.startedDate + (train.day * 1 days);

        train.nextEndedDate = 0;
        train.nextDay = 0;
        train.nextEarning = 0;

        emit TrainStarted(
            _msgSender(),
            train.startedDate,
            train.endedDate,
            train.earning,
            train.day
        );
    }

    function _calculateVariables(Train storage train)
        private
        view
        returns (
            uint256 earning,
            uint256 day,
            bool start
        )
    {
        day = 60;
        start = true;

        for (uint256 i; i < _nftOrder.length; i++) {
            NFT memory nft = _orderedNft[_nftOrder[i]];
            address nftAddress = nft.nftAddress;

            TrainNft memory trainNft = train.nfts[nftAddress];

            if (trainNft.amount == 0) {
                continue;
            }

            if (trainNft.nftAddress == nftAddress) {
                if (nft.nftType == Types.AmountFactor) {
                    earning = IAmountFactor(nftAddress).calculateAmount(
                        trainNft.id,
                        earning,
                        trainNft.amount
                    );
                } else if (nft.nftType == Types.TimeFactor) {
                    day = ITimeFactor(nftAddress).calculateTime(trainNft.id, day, trainNft.amount);
                }
            } else {
                start = start && !nft.required;
            }
        }
    }

    function calculateEarnings(uint256 time)
        public
        view
        returns (
            uint256 earnings,
            uint256 periodCount,
            bool isChange,
            uint256 nextEarning,
            uint256 nextEndedDate,
            uint256 nextDay
        )
    {
        uint256 _endedDate = _trains[_msgSender()].endedDate;
        uint256 _nextEndedDate = _trains[_msgSender()].nextEndedDate;

        uint256 _day = _trains[_msgSender()].day;
        uint256 _nextDay = _trains[_msgSender()].nextDay;

        uint256 _earning = _trains[_msgSender()].earning;
        uint256 _nextEarning = _trains[_msgSender()].nextEarning;

        periodCount = _trains[_msgSender()].periodCount;
        isChange = false;

        earnings += _earning * _day;
        _endedDate += _day * 1 days;
        periodCount++;

        if (_nextEndedDate > 0) {
            isChange = true;

            while (_nextEndedDate < time) {
                earnings += _nextEarning * _nextDay;
                _nextEndedDate += _nextDay * 1 days;
                periodCount++;
            }

            nextEndedDate = _nextEndedDate;
            nextEarning = _nextEarning;
            nextDay = _nextDay;
        } else {
            while (_endedDate < time) {
                earnings += _earning * _day;
                _endedDate += _day * 1 days;
                periodCount++;
            }

            nextEndedDate = _endedDate;
            nextEarning = _earning;
            nextDay = _day;
        }
    }

    function withdraw() public trainExist {
        Train storage train = _trains[_msgSender()];

        /* solhint-disable not-rely-on-time */
        uint256 time = block.timestamp;
        /* solhint-enable not-rely-on-time */

        require(train.startedDate > 0, "You can't withdraw before start");
        require(time >= train.endedDate, "You can withdraw only after ended date");

        uint256 earnings = 0;
        bool isChange = false;

        (
            earnings,
            train.periodCount,
            isChange,
            train.earning,
            train.endedDate,
            train.day
        ) = calculateEarnings(time);

        train.withdraws += earnings;

        if (isChange) {
            train.nextEarning = 0;
            train.nextEndedDate = 0;
            train.nextDay = 0;

            emit TrainEarningChanged(_msgSender(), train.earning);
            emit TrainDayChanged(_msgSender(), train.day);
            emit TrainNextEarningChanged(_msgSender(), train.nextEarning);
            emit TrainNextDayChanged(_msgSender(), train.nextDay);
        }

        _token.transfer(_msgSender(), earnings);
        emit TrainWithdraw(_msgSender(), earnings);
    }

    modifier trainExist() {
        require(_trains[_msgSender()].userAddress == _msgSender(), "User must create train");
        _;
    }

    modifier trainNotExist() {
        require(_trains[_msgSender()].userAddress != _msgSender(), "User must not have train");
        _;
    }
}


// File: /contracts/utils/LocoNft.sol
// SPDX-License-Identifier: MIT

pragma solidity >=0.8.0 <0.9.0;

import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts/token/ERC1155/ERC1155.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

abstract contract LocoNft is ERC1155, Ownable {
    using SafeMath for uint256;

    mapping(uint256 => uint256) internal _levels;

    uint8 internal _order;

    IERC20Metadata internal _token;

    function level(uint256 _tokenId) public view returns (uint256) {
        return _levels[_tokenId];
    }

    function order() public view returns (uint8) {
        return _order;
    }

    function _mintWithLevel(
        address to,
        uint256 id,
        uint256 amount,
        uint8 _level,
        bytes memory data
    ) internal virtual {
        _mint(to, id, amount, data);

        _levels[id] = _level;
    }
}


// File: /contracts/utils/ITimeFactor.sol
