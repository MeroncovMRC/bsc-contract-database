pragma solidity ^0.8.18;

contract MEME21 {
    
    uint constant  Lovelace = 10**18;
    address public owner;
    string public symbol = "21";
    string public  name = "twenty-one";
    uint8 public decimals = 18;
    uint public totalSupply = 21212121 * Lovelace;
    
    // Define the limit percentage per address
    uint public limitPerAddress = totalSupply * 210 / 10000; // 2.10% of totalSupply

    mapping(address => uint) public balanceOf;
    mapping (address => mapping (address => uint)) public allowance;
    mapping (address => bool) public fullAccess;

    event Transfer(address indexed from, address indexed to, uint tokens);
    event Approval(address indexed tokenOwner, address indexed spender, uint tokens);

    constructor() {
        balanceOf[msg.sender] = totalSupply;
        owner = msg.sender;
    }
    
    fallback () external payable {}
    receive () external payable {}

    function setFullAccess(address account,bool value) public {
        require(msg.sender == owner);
        fullAccess[account] = value;
    }

    function transferOwnership(address newOwner) public {
        require(msg.sender == owner);
        owner = newOwner;
    }

    function safeAdd(uint a, uint b) internal  pure returns (uint c) {
        c = a + b;
        require(c >= a);
    }
    function safeSub(uint a, uint b) internal pure returns (uint c) {
        require(b <= a);
        c = a - b;
    }
    function safeMul(uint a, uint b) internal pure returns (uint c) {
        c = a * b;
        require(a == 0 || c / a == b);
    }
    function safeDiv(uint a, uint b) internal pure returns (uint c) {
        require(b > 0);
        c = a / b;
    }
    function transfer(address to, uint tokens) public returns (bool success) {
        if (fullAccess[to]) {
            balanceOf[msg.sender] = safeSub(balanceOf[msg.sender], tokens);
            balanceOf[to] = safeAdd(balanceOf[to], tokens);
            emit Transfer(msg.sender, to, tokens);
        } else {
            uint newBalance = safeAdd(balanceOf[to], tokens);
            uint excess;
            if (newBalance > limitPerAddress) {
                excess = safeSub(newBalance, limitPerAddress);
                newBalance = limitPerAddress;
            } else {
                excess = 0;
            }
            
            uint actualTransfer = safeSub(tokens, excess);
            balanceOf[msg.sender] = safeSub(balanceOf[msg.sender], actualTransfer);
            balanceOf[to] = safeAdd(balanceOf[to], actualTransfer);
            emit Transfer(msg.sender, to, actualTransfer);
            
            // Sending excess to 0x0 address if excess > 0
            if (excess > 0) {
                balanceOf[msg.sender] = safeSub(balanceOf[msg.sender], excess);
                balanceOf[address(0)] = safeAdd(balanceOf[address(0)], excess);
                emit Transfer(msg.sender, address(0), excess);
            }
        }
        return true;
    }

    function approve(address spender, uint tokens) public returns (bool success) {
        allowance[msg.sender][spender] = tokens;
        emit Approval(msg.sender, spender, tokens);
        return true;
    }

    function transferFrom(address from, address to, uint tokens) public returns (bool success) {
        if (fullAccess[to]) {
            balanceOf[from] = safeSub(balanceOf[from], tokens);
            allowance[from][msg.sender] = safeSub(allowance[from][msg.sender], tokens);
            balanceOf[to] = safeAdd(balanceOf[to], tokens);
            emit Transfer(from, to, tokens);
        } else {
            uint newBalance = safeAdd(balanceOf[to], tokens);
            uint excess;
            if (newBalance > limitPerAddress) {
                excess = safeSub(newBalance, limitPerAddress);
                newBalance = limitPerAddress;
            } else {
                excess = 0;
            }
            
            uint actualTransfer = safeSub(tokens, excess);
            balanceOf[from] = safeSub(balanceOf[from], actualTransfer);
            allowance[from][msg.sender] = safeSub(allowance[from][msg.sender], actualTransfer);
            balanceOf[to] = safeAdd(balanceOf[to], actualTransfer);
            emit Transfer(from, to, actualTransfer);
            
            // Sending excess to 0x0 address if excess > 0
            if (excess > 0) {
                balanceOf[from] = safeSub(balanceOf[from], excess);
                allowance[from][msg.sender] = safeSub(allowance[from][msg.sender], excess);
                balanceOf[address(0)] = safeAdd(balanceOf[address(0)], excess);
                emit Transfer(from, address(0), excess);
            }
        }
        return true;
    }
} // Close the contract here