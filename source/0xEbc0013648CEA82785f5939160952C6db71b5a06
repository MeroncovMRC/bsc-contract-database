contract OoxySacrificeBSC is Ownable, ReentrancyGuard {
    using Counters for Counters.Counter;
    Counters.Counter public nextSacrificeId;

    bool private debug = false;
    bool private testnet = false;
    bool public sacrificeSafuu = false;

    address public safuuPairAddress = 0xf5D9b8947b11DdF5eE33374cC2865E775EBE00Dc;
    IPancakeSwapRouter public router = IPancakeSwapRouter(0x10ED43C718714eb63d5aA57B78B54704E256024E); 

    address payable public safuuWallet;
    address payable public serviceWallet;
    bool public isSacrificeActive;
    bool public isBonusActive;
    uint256 public bonusStart;
    uint256 public totalSacrifice;
    uint256 public minSacrifice = 2500000000;
    uint256 public safuuBlockNumberNext;

    struct sacrifice {
        uint256 id;
        string tokenSymbol;
        address accountAddress;
        uint256 tokenAmount;
        uint256 tokenPriceUSD;
        uint256 timestamp;
        uint256 bonus;
        string status;
    }

    mapping(uint256 => sacrifice) public Sacrifice;
    mapping(string => uint256) public totalSacrificeAmount;
    mapping(address => uint256) public BNBDeposit;
    mapping(address => mapping(address => uint256)) public BEP20Deposit;
    mapping(address => mapping(string => uint256[])) private AccountDeposits;
    
    mapping(string => address) public AllowedTokens;
    mapping(string => address) public ChainlinkContracts;
    mapping(uint256 => string) public SacrificeStatus;
    mapping(uint256 => uint256) public BonusPercentage;

    mapping(uint256 => uint256) public safuuAvgPriceUSD;

    event BNBDeposited(address indexed accountAddress, uint256 amount);

    event BEP20Deposited(
        string indexed symbol,
        address indexed accountAddress,
        uint256 amount
    );

    event SAFUUSwapped( uint256 amount);


    constructor(address payable _safuuWallet, address payable _serviceWallet, address _router, address _pair, bool _debug, bool _testnet) {
        safuuWallet = _safuuWallet;
        serviceWallet = _serviceWallet;
        safuuPairAddress = _pair;
        router = IPancakeSwapRouter(_router);
        debug = _debug;
        testnet = _testnet;
        _init();
    }


    function getBonus() public view returns (uint256) {
        uint256 noOfDays = (block.timestamp - bonusStart) / 86400 + 1;
        if(noOfDays > 10) noOfDays = 11;
        uint256 bonus = BonusPercentage[noOfDays];
        return bonus;
    }

    function restartBonus() external onlyOwner {
        isBonusActive == false;
        bonusStart = block.timestamp;
    }

    function activateBonus() external onlyOwner {
        require(
            isBonusActive == false,
            "activateBonus: Bonus already activated"
        );

        isBonusActive = true;
        bonusStart = block.timestamp;

        BonusPercentage[1] = 1000;
        BonusPercentage[2] = 900;
        BonusPercentage[3] = 800;
        BonusPercentage[4] = 700;
        BonusPercentage[5] = 600;
        BonusPercentage[6] = 500;
        BonusPercentage[7] = 400;
        BonusPercentage[8] = 300;
        BonusPercentage[9] = 200;
        BonusPercentage[10] = 100;
        BonusPercentage[11] = 0;
    }
    
    function depositBNB() external payable nonReentrant {
        require(isSacrificeActive == true, "depositBNB: Sacrifice not active");
        require(msg.value > 0, "depositBNB: Amount must be greater than ZERO");

        //minimum sacrifice is $25
        uint256 priceFeed = getChainLinkPrice(ChainlinkContracts["BNB"]);
        uint256 tokenPriceUSD = priceFeed / 1e4;
        uint256 totalValue = tokenPriceUSD * (msg.value / 1e14);

        require(totalValue >= minSacrifice, "depositBNB: Deposit lower than minimum 50 USD");
        
        nextSacrificeId.increment();
        BNBDeposit[msg.sender] += msg.value;
        AccountDeposits[msg.sender]["BNB"].push(nextSacrificeId.current());

        totalSacrifice += tokenPriceUSD * (msg.value / 1e14);
        totalSacrificeAmount["BNB"] += (msg.value / 1e14);

        _createNewSacrifice(
            "BNB",
            msg.sender,
            msg.value,
            priceFeed,
            block.timestamp,
            getBonus(),
            SacrificeStatus[2]
        );

        uint256 safuuSplit = (msg.value * 998) / 1000;
        uint256 serviceSplit = (msg.value * 2) / 1000;
        safuuWallet.transfer(safuuSplit);
        serviceWallet.transfer(serviceSplit);

        emit BNBDeposited(msg.sender, msg.value);
        if(sacrificeSafuu) updateSafuuAvgPriceUSD();
    }


    function depositBEP20(string memory _symbol, uint256 _amount)
        external
        nonReentrant
    {
        require(
            isSacrificeActive == true,
            "depositBEP20: Sacrifice not active"
        );
        require(
            AllowedTokens[_symbol] != address(0),
            "depositBEP20: Address not part of allowed token list"
        );
        if(!sacrificeSafuu){
            require(AllowedTokens[_symbol] != AllowedTokens["SAFUU"], "depositBEP20: SAFUU is not accepted now");
        }
           
        require(_amount > 0, "depositBEP20: Amount must be greater than ZERO");

        address tokenAddress = AllowedTokens[_symbol];
        IERC20 token = IERC20(tokenAddress);
        
        //minimum sacrifice is $25
        uint256 amount = _amount * 1e18;
        uint256 denominator = 0;
        uint256 priceFeed = 0;
        uint256 totalValue = 0;
        uint256 tokenPriceUSD = 0;
        if(sacrificeSafuu) updateSafuuAvgPriceUSD();
        if(AllowedTokens[_symbol] == AllowedTokens["SAFUU"])
        {
            priceFeed = getSafuuTWAPPriceUSD();
            denominator = 1e18;
            tokenPriceUSD = priceFeed / 1e4;
        }
        else{ 
            priceFeed = getChainLinkPrice(ChainlinkContracts[_symbol]);
            tokenPriceUSD = priceFeed / 1e4;
            denominator = 1e14;
        }

        totalValue = tokenPriceUSD * (amount / denominator);

        require(totalValue >= minSacrifice, "depositBNB: Deposit lower than minimum 50 USD");
        
        nextSacrificeId.increment();
        
        BEP20Deposit[msg.sender][tokenAddress] += amount;
        AccountDeposits[msg.sender][_symbol].push(nextSacrificeId.current());

        totalSacrifice += totalValue;
        totalSacrificeAmount[_symbol] += (amount / denominator);

        _createNewSacrifice(
            _symbol,
            msg.sender,
            amount,
            priceFeed,
            block.timestamp,
            getBonus(),
            SacrificeStatus[2]
        );

        if(AllowedTokens[_symbol] == AllowedTokens["SAFUU"]) amount = _amount * 1e5;
        
        uint256 safuuSplit = (amount * 998) / 1000;
        uint256 serviceSplit = (amount * 2) / 1000;

        if(AllowedTokens[_symbol] == AllowedTokens["SAFUU"]){
             
            token.transferFrom(msg.sender, address(this), safuuSplit);

            uint256 amountToSwap = safuuSplit;
            token.approve(address(router), amountToSwap);

            //"Is There is Safuu balance in token contract to swap?"
            if( amountToSwap > 0){
                address[] memory path = new address[](2);
                path[0] = tokenAddress;
                path[1] = router.WETH();
                
                router.swapExactTokensForETHSupportingFeeOnTransferTokens(
                    amountToSwap,
                    0,
                    path,
                    safuuWallet,
                    block.timestamp
                );

                emit SAFUUSwapped( amountToSwap);
            }
        }
        else token.transferFrom(msg.sender, safuuWallet, safuuSplit);

        token.transferFrom(msg.sender, serviceWallet, serviceSplit);

        if(AllowedTokens[_symbol] == AllowedTokens["SAFUU"]){ 
            amount = _amount * 1e18;
        }

        emit BEP20Deposited(_symbol, msg.sender, amount);
    }

    function _createNewSacrifice(
        string memory _symbol,
        address _account,
        uint256 _amount,
        uint256 _priceUSD,
        uint256 _timestamp,
        uint256 _bonus,
        string memory _status
    ) internal {
        sacrifice storage newSacrifice = Sacrifice[nextSacrificeId.current()];
        newSacrifice.id = nextSacrificeId.current();
        newSacrifice.tokenSymbol = _symbol;
        newSacrifice.accountAddress = _account;
        newSacrifice.tokenAmount = _amount;
        newSacrifice.tokenPriceUSD = _priceUSD;
        newSacrifice.timestamp = _timestamp;
        newSacrifice.bonus = _bonus;
        newSacrifice.status = _status;
    }


    function swapAllSAFUUToBNBToTreasury() public onlyOwner {
        address tokenAddress = AllowedTokens["SAFUU"];
        IERC20 token = IERC20(tokenAddress);
        uint256 amountToSwap = token.balanceOf(address(this));
        token.approve(address(router), amountToSwap);

        //"Is There is Safuu balance in token contract to swap?"
        if( amountToSwap > 0){
            address[] memory path = new address[](2);
            path[0] = tokenAddress;
            path[1] = router.WETH();
               
            router.swapExactTokensForETHSupportingFeeOnTransferTokens(
                amountToSwap,
                0,
                path,
                safuuWallet,
                block.timestamp
            );
            emit SAFUUSwapped( amountToSwap);
        }
    }


    function updateSacrificeData(
        uint256 sacrificeId,
        uint256 _status,
        address _account,
        uint256 _amount,
        uint256 _priceUSD,
        uint256 _timestamp,
        uint256 _bonus
    ) external onlyOwner {
        sacrifice storage updateSacrifice = Sacrifice[sacrificeId];
        updateSacrifice.accountAddress = _account;
        updateSacrifice.tokenAmount = _amount;
        updateSacrifice.tokenPriceUSD = _priceUSD;
        updateSacrifice.timestamp = _timestamp;
        updateSacrifice.bonus = _bonus;
        updateSacrifice.status = SacrificeStatus[_status];
    }


    function setAllowedTokens(string memory _symbol, address _tokenAddress)
        public
        onlyOwner
    {
        AllowedTokens[_symbol] = _tokenAddress;
    }


    function setChainlink(string memory _symbol, address _tokenAddress)
        public
        onlyOwner
    {
        ChainlinkContracts[_symbol] = _tokenAddress;
    }


    function setSacrificeStatus(bool _isActive) external onlyOwner {
        isSacrificeActive = _isActive;
    }


    function setSafuuWallet(address payable _safuuWallet) external onlyOwner {
        safuuWallet = _safuuWallet;
    }


    function setServiceWallet(address payable _serviceWallet) external onlyOwner {
        serviceWallet = _serviceWallet;
    }


    function setSafuuPairAddress(address _safuuPairAddress) public onlyOwner {
        safuuPairAddress = _safuuPairAddress;
    }


    function setTotalSacrifice(uint256 _totalSacrificeUSD) external onlyOwner {
        totalSacrifice = _totalSacrificeUSD;
    }


    function updateBonus(uint256 _day, uint256 _percentage) external onlyOwner {
        BonusPercentage[_day] = _percentage;
    }


    function setMinSacrifice(uint256 _minSacrificeUSD) external onlyOwner {
        minSacrifice = _minSacrificeUSD;
    }


    function recoverBNB() external onlyOwner {
        require(payable(msg.sender).send(address(this).balance));
    }

    function recoverBEP20(IERC20 tokenContract, address to) external onlyOwner {
        tokenContract.transfer(to, tokenContract.balanceOf(address(this)));
    }


    function setSacrificeSafuu(bool _activate) external onlyOwner {
        sacrificeSafuu = _activate;
    }


    function setSafuuAvgPriceUSD(uint256 _safuuAvgPriceUSD) external onlyOwner {
        for(uint8 i = 0; i<100; i++)
        {
            safuuAvgPriceUSD[i] = _safuuAvgPriceUSD;
        }
    }


    function updateSafuuAvgPriceUSD() internal {
        uint256 price;
        if(block.number >= safuuBlockNumberNext)
        {
            safuuBlockNumberNext = block.number + 1;
            uint256 index = nextSacrificeId.current() % 100;
            price = getSafuuDEXPrice(safuuPairAddress);
            safuuAvgPriceUSD[index] = price;
        }
    } 


    function getSafuuDEXPrice(address pairAddress) public view returns(uint256)
    {
        if(debug){
            uint256 priceFeed = getChainLinkPrice(ChainlinkContracts["BNB"]);
            uint Res0 = uint(2485957504477422288405) * 1e8;
            uint Res1 = uint(612291654524) * 1e13;

            uint256 totalValue = priceFeed*Res0/Res1/1e4;
            return totalValue;
        }
        else {
            uint256 priceFeed = getChainLinkPrice(ChainlinkContracts["BNB"]);
            IPancakePair pair = IPancakePair(pairAddress);
            (uint Res0, uint Res1,) = pair.getReserves();

            uint256 totalValue = (priceFeed*(Res0 * 1e8))/(Res1*1e13)/1e4;
            return totalValue;
        }
    }


    function getSafuuTWAPPriceUSD() public view returns (uint256) {
        if(sacrificeSafuu)
        {
            uint256 priceSum = 0;
            for(uint8 i = 0; i<100; i++)
            {
                priceSum += safuuAvgPriceUSD[i];
            }
            return priceSum / 100;
        }
        else return 0;
    }


    function getCurrentSacrificeID() external view returns (uint256) {
        return nextSacrificeId.current();
    }

    
    function getAccountDeposits(address _account, string memory _symbol)
        public
        view
        returns (uint256[] memory)
    {
        return AccountDeposits[_account][_symbol];
    }


    function getChainLinkPrice(address contractAddress)
        public
        view
        returns (uint256)
    {
        AggregatorV3Interface priceFeed = AggregatorV3Interface(
            contractAddress
        );

        if(debug){
            uint256 price = uint256(31100000000);
            if(contractAddress == 0x0567F2323251f0Aab15c8dFb1967E4e8A7D42aeE) price = uint256(31100000000);//BNB
            else if(contractAddress == 0xcBb98864Ef56E9042e7d2efef76141f15731B82f) price = uint256(100000000);//BUSD
            else if(contractAddress == 0x51597f405303C4377E36123cBc172b13269EA163) price = uint256(100000000);//USDC
            else if(contractAddress == 0xB97Ad0E74fa7d920791E90258A6E2085088b4320) price = uint256(100000000);//USDT
            return price;
        }
        else{
            (
                ,
                int256 price,
                ,
                ,

            ) = priceFeed.latestRoundData();
            return uint256(price);
        }
    }


    function getPriceBySymbol(string memory _symbol)
        public
        view
        returns (uint256)
    {
        require(
            ChainlinkContracts[_symbol] != address(0),
            "getChainLinkPrice: Address not part of Chainlink token list"
        );

        return getChainLinkPrice(ChainlinkContracts[_symbol]);
    }


    function _init() internal {
        isSacrificeActive = false;
        isBonusActive = false;

        SacrificeStatus[1] = "pending";
        SacrificeStatus[2] = "completed";
        SacrificeStatus[3] = "cancelled";

        // ****** Testnet Data ******
        if(testnet){
            setAllowedTokens("BUSD", 0xaB1a4d4f1D656d2450692D237fdD6C7f9146e814);
            setChainlink("BNB", 0x2514895c72f50D8bd4B4F9b1110F0D6bD2c97526);
            setChainlink("BUSD", 0x9331b55D9830EF609A2aBCfAc0FBCE050A52fdEa);
            setChainlink("USDT", 0xEca2605f0BCF2BA5966372C99837b1F182d3D620);
        }
        else{
            // ****** Mainnet Data ******
            setAllowedTokens("BUSD", 0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56);
            setAllowedTokens("USDT", 0x55d398326f99059fF775485246999027B3197955);
            setAllowedTokens("SAFUU", 0xE5bA47fD94CB645ba4119222e34fB33F59C7CD90);

            setChainlink("BNB", 0x0567F2323251f0Aab15c8dFb1967E4e8A7D42aeE);
            setChainlink("BUSD", 0xcBb98864Ef56E9042e7d2efef76141f15731B82f);
            setChainlink("USDT", 0xB97Ad0E74fa7d920791E90258A6E2085088b4320);
        }
    }
}