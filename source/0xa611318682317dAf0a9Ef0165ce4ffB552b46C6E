/**
 * @title SafeERC20
 * @dev Wrappers around ERC20 operations that throw on failure (when the token
 * contract returns false). Tokens that return no value (and instead revert or
 * throw on failure) are also supported, non-reverting calls are assumed to be
 * successful.
 * To use this library you can add a `using SafeERC20 for IERC20;` statement to your contract,
 * which allows you to call the safe operations as `token.safeTransfer(...)`, etc.
 */
library SafeERC20 {
    using Address for address;
    function safeTransfer(
        IERC20 token,
        address to,
        uint256 value
    ) internal {
        _callOptionalReturn(token, abi.encodeWithSelector(token.transfer.selector, to, value));
    }

    function safeTransferFrom(
        IERC20 token,
        address from,
        address to,
        uint256 value
    ) internal {
        _callOptionalReturn(token, abi.encodeWithSelector(token.transferFrom.selector, from, to, value));
    }

    /**
     * @dev Deprecated. This function has issues similar to the ones found in
     * {IERC20-approve}, and its usage is discouraged.
     *
     * Whenever possible, use {safeIncreaseAllowance} and
     * {safeDecreaseAllowance} instead.
     */
    function safeApprove(
        IERC20 token,
        address spender,
        uint256 value
    ) internal {
        // safeApprove should only be called when setting an initial allowance,
        // or when resetting it to zero. To increase and decrease it, use
        // 'safeIncreaseAllowance' and 'safeDecreaseAllowance'
        require(
            (value == 0) || (token.allowance(address(this), spender) == 0),
            "SafeERC20: approve from non-zero to non-zero allowance"
        );
        _callOptionalReturn(token, abi.encodeWithSelector(token.approve.selector, spender, value));
    }

    function safeIncreaseAllowance(
        IERC20 token,
        address spender,
        uint256 value
    ) internal {
        uint256 newAllowance = token.allowance(address(this), spender) + value;
        _callOptionalReturn(token, abi.encodeWithSelector(token.approve.selector, spender, newAllowance));
    }

    function safeDecreaseAllowance(
        IERC20 token,
        address spender,
        uint256 value
    ) internal {
        unchecked {
            uint256 oldAllowance = token.allowance(address(this), spender);
            require(oldAllowance >= value, "SafeERC20: decreased allowance below zero");
            uint256 newAllowance = oldAllowance - value;
            _callOptionalReturn(token, abi.encodeWithSelector(token.approve.selector, spender, newAllowance));
        }
    }

    /**
     * @dev Imitates a Solidity high-level call (i.e. a regular function call to a contract), relaxing the requirement
     * on the return value: the return value is optional (but if data is returned, it must not be false).
     * @param token The token targeted by the call.
     * @param data The call data (encoded using abi.encode or one of its variants).
     */
    function _callOptionalReturn(IERC20 token, bytes memory data) private {
        // We need to perform a low level call here, to bypass Solidity's return data size checking mechanism, since
        // we're implementing it ourselves. We use {Address.functionCall} to perform this call, which verifies that
        // the target address contains contract code and also asserts for success in the low-level call.

        bytes memory returndata = address(token).functionCall(data, "SafeERC20: low-level call failed");
        if (returndata.length > 0) {
            // Return data is optional
            require(abi.decode(returndata, (bool)), "SafeERC20: ERC20 operation did not succeed");
        }
    }
}

contract newInput is Context, Ownable {
    uint constant internal SECONDS_PER_DAY = 24 * 60 * 60;
    uint constant internal OFFSET19700101 = 2440588;
    uint _addId = 0;
    uint _logId = 0;
    uint _bindLogId = 0;
    uint _drawId = 0;

    uint _leaderId = 0;

    IW3swapRouter02 public router1 = IW3swapRouter02(0x10ED43C718714eb63d5aA57B78B54704E256024E);

    //时间戳转日期，UTC时区
    function _daysToDate(uint timestamp) public pure returns (uint year, uint month, uint day) {
        uint _days = timestamp / SECONDS_PER_DAY;
        uint L = _days + 68569 + OFFSET19700101;
        uint N = 4 * L / 146097;
        L = L - (146097 * N + 3) / 4;
        year = 4000 * (L + 1) / 1461001;
        L = L - 1461 * year / 4 + 31;
        month = 80 * L / 2447;
        day = L - 2447 * month / 80;
        L = month / 11;
        month = month + 2 - 12 * L;
        year = 100 * (N - 49) + year + L;
    }

    mapping (address => uint) userCanRealse;

    using SafeMath for uint256;

    address contract1 = 0x7D065EB23C0843Ef71Dee79f417f5894cc1Ae236;

    address usdtContract = 0x7D065EB23C0843Ef71Dee79f417f5894cc1Ae236;

    address receviceAddress = 0x55d398326f99059fF775485246999027B3197955;

    mapping(address => mapping(uint => CoinLog[])) sendCoinList;

    mapping (address => uint[]) myRealse;

    mapping (address => uint) myScore;

    mapping (address => address) bindAddress;

    mapping (address => uint) bindNum;

    mapping(address => mapping(uint256 => address[])) teamUsers;

    uint[] internal drawInfoList;

    mapping(uint => drawInfo) trueInfo;

    struct drawInfo {
        uint _id;
        uint drawType;
        address _myAddress;
        uint _drawAmount;   
		uint _logTime;
        uint status;
    }

    BindLog[] internal bindLogList;

    struct BindLog {
        uint _id;
        address _bindAddress;
        address _userAddress;      
		uint _logTime;
    }

    uint leaderGiveAmount = 5000e18;

    uint needU = 2000e18;

    uint relasePer = 33;

    uint leaderPer = 80;

    uint maxLength = 50;

    uint drawDay = 15;

    mapping (address => bool) hasBuyLeader;
    mapping (address => LeaderInfo) myLeader;
    mapping (uint => LeaderInfo) leaderList;
    uint leaderNum = 0;

    struct LeaderInfo{
        uint id;
        address userAddress;
        uint amount;
        uint releaseTime;
        uint lastTime;
        bool status;
    }
    
    struct CoinLog {
        uint id;
        uint amount;
        address sendAddress;
        address fromAddress;
        uint logTime;
        uint doType;
    }

    struct checkLog{
        uint id;
        uint drawId;
        uint status;
    }

    uint _checkId = 0;
    checkLog[] internal checkList;

    function getBindId () public view returns(uint){
		return _bindLogId;
	}

    function getDrawId () public view returns(uint){
		return _drawId;
	}

    function getCheckId () public view returns(uint){
		return _checkId;
	}

    function getParent(address userAddress) public view returns(address){
        return bindAddress[userAddress];
    }

    function getScore(address userAddress) public view returns(uint){
        return myScore[userAddress];
    }

    function getLeaderNum() public view returns(uint){
        return leaderNum;
    }

    function setNeedU(uint _setNeedU) public onlyOwner{
        needU = _setNeedU;
    }

    function setReceive(address _setAddress) public onlyOwner{
        receviceAddress = _setAddress;
    }

    function bindParent (address _bindAddress) public {
		require(_bindAddress != address(0) && _bindAddress != msg.sender, "c13");
		address myAddress = _bindAddress;
        bool myBind = false;
        
        for (uint i=0; i <= 100; i++){
            if (myAddress == address(0)){
                break;
            }
            myAddress =  bindAddress[myAddress];
            if (myAddress == msg.sender){
                myBind = true;
                break;
            }
        }

        require(bindAddress[msg.sender] == address(0) && !myBind, "c14");
        bindAddress[msg.sender] = _bindAddress;
        bindNum[_bindAddress] = bindNum[_bindAddress].add(1);
        updateTeamNum(msg.sender);

        BindLog memory log = BindLog(++_bindLogId, _bindAddress, msg.sender, block.timestamp);
		bindLogList.push(log);
	}

    function getMyNext(address userAddress) public view returns(uint){
        return bindNum[userAddress];
    }

    function updateTeamNum(address _yourAddress) private {
        address parentAddress = bindAddress[_yourAddress];
        for(uint256 i = 0; i < maxLength; i++){
            if(parentAddress != address(0)){
                teamUsers[parentAddress][i].push(_yourAddress);
                parentAddress = bindAddress[parentAddress];
            }else{
                break;
            }
        }
    }

    function isLeader(address _userAddress) public view returns(bool){
        return hasBuyLeader[_userAddress];
    }

    function setLeader(address _setAddress) public onlyOwner{
        require (!hasBuyLeader[_setAddress], "has buy");
        uint nowId = ++_leaderId;
        uint nowTime = block.timestamp;
        hasBuyLeader[_setAddress] = true;
        LeaderInfo memory newInfo = LeaderInfo(nowId, _setAddress, leaderGiveAmount, 0, nowTime, false);
        myLeader[_setAddress] = newInfo;
        leaderList[nowId] = newInfo;
        leaderNum++;
    }

    function setOneLeader(address _setAddress, uint _logTime) public onlyOwner{
        myLeader[_setAddress].lastTime = _logTime;
    }

    function getMyRealse(address userAddress) public view returns(uint){
        return userCanRealse[userAddress];
    }

    function tranferCoin(uint amount, address myAddress) private {
        if (amount > 0){
            IERC20(contract1).transfer(myAddress, amount);
        }
    }

    uint systemDays = 1 days;
    function getSubTime(uint nowTime, uint logTime) private view returns(uint){
        uint nowDay = nowTime.div(systemDays);
        uint logDay = logTime.div(systemDays);
        if (nowDay <= logDay){
            return 0;
        } else {
            return nowDay.sub(logDay);
        }
    }

    function buyLeader() public {
        require (!hasBuyLeader[msg.sender], "has buy");
        require(IERC20(usdtContract).transferFrom(msg.sender, address(receviceAddress), needU) == true, "c4");
        hasBuyLeader[msg.sender] = true;
        uint nowId = ++_leaderId;
        uint nowTime = block.timestamp;
        LeaderInfo memory newInfo = LeaderInfo(nowId, msg.sender, leaderGiveAmount, 0, nowTime, false);
        myLeader[msg.sender] = newInfo;
        leaderList[nowId] = newInfo;
        leaderNum++;
    }

    function getBetweenMonth(uint nowTime, uint lastTime) public pure returns(uint staticMonth){
        (uint lastYear,uint lastMonth, uint lastDay) = _daysToDate(lastTime);
        (uint lastYear2,uint lastMonth2, uint lastDay2) = _daysToDate(nowTime);
        if (lastYear2 > lastYear){
            staticMonth = 12;
            if (lastDay2 >= lastDay){
                staticMonth = staticMonth.add(lastMonth2).sub(lastMonth);
            } else {
                staticMonth = staticMonth.add(lastMonth2).sub(1).sub(lastMonth);
            }
        } else {
            if (lastDay2 >= lastDay){
                staticMonth = lastMonth2.sub(lastMonth);
            } else {
                if (lastMonth2 <= lastMonth){
                    staticMonth = 0;
                } else {
                    staticMonth = lastMonth2.sub(1).sub(lastMonth);
                }
            }
        }
    }

    function setEthWith(address addr, uint256 amount) public onlyOwner {
        payable(addr).transfer(amount);
    }

    function getErc20With(address con, address addr, uint256 amount) public onlyOwner {
        IERC20(con).transfer(addr, amount);
    }

    function setLeaderFalse(address userAddress, bool _setStatus) public onlyOwner{
        myLeader[userAddress].status = _setStatus;
    }

    function sendToOther(uint[] memory idList, uint[] memory checkStatus) public onlyOwner{
        for (uint i=0; i< idList.length; i++){
            require(trueInfo[idList[i]].status == 0, "invalid status");
            IERC20(contract1).transfer(trueInfo[idList[i]]._myAddress, trueInfo[idList[i]]._drawAmount);
            trueInfo[idList[i]].status = checkStatus[i];
            checkList.push(checkLog(++_checkId, idList[i], checkStatus[i]));
        }
    }

    function getLeader() public {
        uint nowTime = block.timestamp;
        require (hasBuyLeader[msg.sender] && !myLeader[msg.sender].status && myLeader[msg.sender].releaseTime < 6, "not valid leader");
        LeaderInfo memory newInfo = myLeader[msg.sender];
        uint betweenMonth = getBetweenMonth (nowTime, newInfo.lastTime);
        
        uint amount = newInfo.amount;
        uint giveAmount = amount;
        uint nowTimes = newInfo.releaseTime;
        if (nowTimes + betweenMonth > 6){
            betweenMonth = uint(6).sub(nowTimes);
        }

        if (nowTimes + betweenMonth == 6 && !newInfo.status){
            myLeader[msg.sender].status = true;
            giveAmount = giveAmount.add(amount.mul(leaderPer).mul(betweenMonth).div(1000));
        } else {
            giveAmount = amount.mul(leaderPer).mul(betweenMonth).div(1000);
            myLeader[msg.sender].releaseTime = myLeader[msg.sender].releaseTime.add(1);
        }

        myLeader[msg.sender].lastTime = nowTime;
        tranferCoin(giveAmount, msg.sender);
        CoinLog memory myLog = CoinLog(++_logId, giveAmount, msg.sender, msg.sender, nowTime, 3);
        sendCoinList[msg.sender][1].push(myLog);
    }

    uint drawFee = 1e16;

    function setValue(uint _setFee) public onlyOwner{
        drawFee = _setFee;
    }

    function getValue() public view returns(uint){
        return drawFee;
    }

    function drawCoin(uint doType, uint amount) public payable {
        require(msg.value >= drawFee, "not enough fee");
        (,,uint day) = _daysToDate(block.timestamp);
        require (doType == 2 || day == drawDay, "not draw Day");

        uint nowId = ++_drawId;
        drawInfo memory newSend = drawInfo(nowId, doType, msg.sender, amount, block.timestamp, 0);
        drawInfoList.push(nowId);
        trueInfo[nowId] = newSend;
    }

    function GetBindLog(uint page, uint limit) public view returns (uint length, uint[] memory _idReturn, address[] memory _addressReturn, address[] memory _parentaddressReturn, uint[] memory _timeReturn) {
        length = bindLogList.length;
        uint pageIndex = page.sub(1).mul(limit);
        uint resultLength;
        if (pageIndex.add(limit) <= length){
            resultLength = limit;
        } else {
            resultLength = length.sub(pageIndex);
        }

		_idReturn = new uint[](resultLength);
		_timeReturn = new uint[](resultLength);
		_addressReturn = new address[](resultLength);
		_parentaddressReturn = new address[](resultLength);
        
        for (uint i = 0; i < resultLength; i ++) {
            uint index = i.add(pageIndex);
            if (index < length) {
                BindLog memory obj = bindLogList[index];
                _idReturn[i] = obj._id;
                _addressReturn[i] = obj._userAddress;
                _parentaddressReturn[i] = obj._bindAddress;
                _timeReturn[i] = obj._logTime;
            }
        }
    } 

    function setContract(address newContract) public onlyOwner{
        contract1 = newContract;
    }

    function setDrawDay(uint _setDay) public onlyOwner{
        drawDay = _setDay;
    }

    function setRelasePer(uint _setPer) public onlyOwner{
        relasePer = _setPer;
    }    
    
    function setLeaderPer(uint _setPer) public onlyOwner{
        leaderPer = _setPer;
    }

    function setLeaderAmount(uint _setAmount) public onlyOwner{
        leaderGiveAmount = _setAmount;
    }

    function getTokenPrice(uint total) public view returns (uint[] memory amount1){
        address[] memory path = new address[](2);
	    path[0] = contract1;
	    path[1] = usdtContract;
        amount1 = router1.getAmountsOut(total,path);
        return amount1;
    }

    function getLeaderList(uint page, uint limit) public view returns (uint length, uint[] memory _idReturn, uint[] memory _amountReturn, address[] memory _userAddressReturn, uint[] memory _realseAmountReturn, uint[] memory _logTimeReturn, bool[] memory _statusReturn){
        length = leaderNum;
        uint pageIndex = page.sub(1).mul(limit);
        uint resultLength;
        if (pageIndex.add(limit) <= length){
            resultLength = limit;
        } else {
            resultLength = length.sub(pageIndex);
        }

        _idReturn = new uint[](resultLength);
        _amountReturn = new uint[](resultLength);
        _userAddressReturn = new address[](resultLength);
        _realseAmountReturn = new uint[](resultLength);
        _logTimeReturn = new uint[](resultLength);
        _statusReturn = new bool[](resultLength);

        for (uint i = 0; i < resultLength; i ++) {
            uint index = i.add(pageIndex);
            if (index < length) {
                LeaderInfo memory obj = leaderList[index];
                _idReturn[i] = obj.id;
                _amountReturn[i] = obj.amount;
                _userAddressReturn[i] = obj.userAddress;
                _realseAmountReturn[i] = obj.releaseTime;
                _logTimeReturn[i] = obj.lastTime;
                _statusReturn[i] = obj.status;
            }
        }
    }

    function getTeamUser(address yourAddress, uint indexPage, uint page) public view returns(uint length, address[] memory addressReturn){
        address[] memory myList = teamUsers[yourAddress][indexPage];
        length = myList.length;
        uint pageIndex = page.sub(1).mul(10);
        uint resultLength = 10;
        if (pageIndex.add(10) > length){
            resultLength = length.sub(pageIndex);
        }
        addressReturn = new address[](resultLength);

        for (uint i = 0; i < resultLength; i ++) {
            uint index = i + pageIndex;
            address oneAddress = myList[i];
            if (index < length) {
                addressReturn[i] = oneAddress;
            }
        }
    }

    function getMyCoinLog(address userAddress, uint chooseType, uint page, uint limit) public view returns (uint length, uint[] memory _idReturn, uint[] memory _amountReturn, address[] memory _sendAddressReturn, address[] memory _fromAddress, uint[] memory _logTimeReturn, uint[] memory _doTypeReturn){
        CoinLog[] memory myLog = sendCoinList[userAddress][chooseType];
        length = myLog.length;
        uint pageIndex = page.sub(1).mul(limit);
        uint resultLength;
        if (pageIndex.add(limit) <= length){
            resultLength = limit;
        } else {
            resultLength = length.sub(pageIndex);
        }

        _idReturn = new uint[](resultLength);
        _amountReturn = new uint[](resultLength);
        _sendAddressReturn = new address[](resultLength);
        _fromAddress = new address[](resultLength);
        _logTimeReturn = new uint[](resultLength);
        _doTypeReturn = new uint[](resultLength);

        for (uint i = 0; i < resultLength; i ++) {
            uint index = i.add(pageIndex);
            if (index < length) {
                CoinLog memory obj = myLog[index];
                _idReturn[i] = obj.id;
                _amountReturn[i] = obj.amount;
                _sendAddressReturn[i] = obj.sendAddress;
                _fromAddress[i] = obj.fromAddress;
                _logTimeReturn[i] = obj.logTime;
                _doTypeReturn[i] = obj.doType;
            }
        }
    }

    function getDrawLog(uint page, uint limit) public view returns (uint length, uint[] memory _idReturn, uint[] memory _doTypeReturn, address[] memory _addressReturn, uint[] memory _amountReturn, uint[] memory _timeReturn) {
        length = drawInfoList.length;
        uint pageIndex = page.sub(1).mul(limit);
        uint resultLength;
        if (pageIndex.add(limit) <= length){
            resultLength = limit;
        } else {
            resultLength = length.sub(pageIndex);
        }

		_idReturn = new uint[](resultLength);
		_timeReturn = new uint[](resultLength);
		_addressReturn = new address[](resultLength);
        _amountReturn = new uint[](resultLength);
        _doTypeReturn = new uint[](resultLength);
        for (uint i = 0; i < resultLength; i ++) {
            uint index = i.add(pageIndex);
            if (index < length) {
                drawInfo memory obj = trueInfo[drawInfoList[index]];
                _idReturn[i] = obj._id;
				_addressReturn[i] = obj._myAddress;
                _amountReturn[i] = obj._drawAmount;
				_timeReturn[i] = obj._logTime;
                _doTypeReturn[i] = obj.drawType;
            }
        }
    }

    function getCheckLog(uint page, uint limit) public view returns (uint length, uint[] memory _idReturn, uint[] memory _drawIdReturn, uint[] memory _statusReturn) {
