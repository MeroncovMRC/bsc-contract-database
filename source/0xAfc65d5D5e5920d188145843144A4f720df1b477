pragma solidity ^0.8.0;

contract CoinSplitter {
    address payable public recipient;

    event CoinReceived(address indexed _sender, uint _amount, uint _splitAmount);

    constructor(address payable _initialRecipient) {
        recipient = _initialRecipient;
    }

    function setRecipient(address payable _newRecipient) external {
        recipient = _newRecipient;
    }

    receive() external payable {
        uint splitAmount = (msg.value * 99) / 100;
        recipient.transfer(splitAmount);
        emit CoinReceived(msg.sender, msg.value, splitAmount);
    }
}