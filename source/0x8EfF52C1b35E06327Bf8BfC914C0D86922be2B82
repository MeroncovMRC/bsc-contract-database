pragma solidity 0.8.16;




contract Batch1155 is Ownable {
    
    IERC1155 public _erc1155;
    mapping (address => bool) public _minters;

    constructor(IERC1155 erc1155) {
        _erc1155 = erc1155;
        _minters[msg.sender] = true;
    }

    function setErc1155(IERC1155 erc1155) public onlyOwner{
        _erc1155 = erc1155;
    }
    
    function addMinter(address minter) public onlyOwner {
        _minters[minter] = true;
    }
    
    function removeMinter(address minter) public onlyOwner {
        _minters[minter] = false;
    }

    function airdrop(uint256 tokenId,address[] calldata whiteList,uint256[] calldata amounts) external  {

        require(_minters[msg.sender], "!minter");

        require(whiteList.length == amounts.length, "count not match!");

        for (uint256 i=0; i<whiteList.length; i++) {
            address to = whiteList[i];
            require(to != address(0),"Address is not valid");
            (IAdorn1155)((address)(_erc1155)).mint(to, tokenId, amounts[i], "");
        }
        
    }

}